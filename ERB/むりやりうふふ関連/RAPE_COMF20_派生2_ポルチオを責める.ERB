	CALL SOURCE_CALC_快Ｖ(TARGET, PLAYER, 500)
	RFLAG:コマンド結果受渡し変数２ = 1
ENDIF

CALL SOURCE_CALC_快Ｃ(PLAYER, TARGET, 500)

;苦痛
LOCAL = 200 * PAIN_CHECK_V(TARGET) / 1000
CALL SOURCE_CALC_苦痛(TARGET, PLAYER, LOCAL)

