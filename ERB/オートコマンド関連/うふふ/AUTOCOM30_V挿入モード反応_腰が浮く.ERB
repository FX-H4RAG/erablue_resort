@AUTOCOM30
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:AUTOCOM_相手番号保存:体力 += 0
DOWNBASE:AUTOCOM_相手番号保存:気力 += 20

CALL SOURCE_CALC_快Ｖ(AUTOCOM_相手番号保存, PLAYER, 500)
CALL SOURCE_CALC_露出_反感無し(AUTOCOM_相手番号保存, PLAYER, 30)
CALL SOURCE_CALC_接触_不快無し(AUTOCOM_相手番号保存, PLAYER, 150)
CALL SOURCE_CALC_快Ｃ(PLAYER, AUTOCOM_相手番号保存, 300)

TIME_腰が浮く:AUTOCOM_相手番号保存:0 = TIME

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:AUTOCOM_相手番号保存:Ｖ経験 ++
EXP:AUTOCOM_相手番号保存:Ｖ性交経験 ++

;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(AUTOCOM_相手番号保存,PLAYER)
	EXP:AUTOCOM_相手番号保存:同性愛経験 += 4
	EXP:PLAYER:同性愛経験 += 4
ENDIF

EXP:AUTOCOM_相手番号保存:愛情経験 += TALENT:AUTOCOM_相手番号保存:恋慕 * 2

RETURN 1

@AUTOCOM_ABLE30(キャラ番号)
#DIM キャラ番号
;対象がTARGETである
SIF TARGET != キャラ番号
	RETURN 0
;正常位、後背位、寝バックで発生
SIF MODE_確認("正常位", キャラ番号) == 0 && MODE_確認("後背位", キャラ番号) == 0 && MODE_確認("寝バック", キャラ番号) == 0
	RETURN 0
;１日に１回のみ発動
SIF TIME_腰が浮く:キャラ番号:0
	RETURN 0
;欲情PALAMLv4必要
SIF PALAM:キャラ番号:欲情 < PALAMLV:4
	RETURN 0
;V挿入派生スキル使用時に確率発生
SIF コマンド履歴:0 != -1
	RETURN 0
SIF STRCOUNT(派生コマンド履歴:0, "60_") == 0
	RETURN 0
;快Vが7000以上である
SIF PALAM:キャラ番号:快Ｖ < 7000
	RETURN 0
RETURN 1

