@AUTOCOM32
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

CALL SOURCE_CALC_快Ｖ(AUTOCOM_相手番号保存, PLAYER, 300)
CALL SOURCE_CALC_露出_反感無し(AUTOCOM_相手番号保存, PLAYER, 80)
CALL SOURCE_CALC_接触_不快無し(AUTOCOM_相手番号保存, PLAYER, 200)
CALL SOURCE_CALC_快Ｃ(PLAYER, AUTOCOM_相手番号保存, 800)

TIME_膣締め:AUTOCOM_相手番号保存:0 = TIME

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:AUTOCOM_相手番号保存:Ｖ経験 ++
EXP:AUTOCOM_相手番号保存:Ｖ性交経験 ++

;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(AUTOCOM_相手番号保存,PLAYER)
	EXP:AUTOCOM_相手番号保存:同性愛経験 += 4
	EXP:PLAYER:同性愛経験 += 4
ENDIF

EXP:AUTOCOM_相手番号保存:愛情経験 += TALENT:AUTOCOM_相手番号保存:恋慕 * 2

RETURN 1

@AUTOCOM_ABLE32(キャラ番号)
#DIM キャラ番号
;V挿入時のみ
SIF MODE_確認_ターゲット側("Ｖ挿入系", キャラ番号) < 0
	RETURN 0
;30分に１回のみ発動
SIF TIME - TIME_膣締め:キャラ番号:0 < 31
	RETURN 0
;技巧４必要
SIF ABL:キャラ番号:技巧 < 4
	RETURN 0
;性知識３必要
SIF 知識素質:キャラ番号:性知識 < 3
	RETURN 0
;無関心、恥じらいはアウト
SIF TALENT:キャラ番号:無関心
	RETURN 0
SIF TALENT:キャラ番号:羞恥心 > 0
	RETURN 0
;基礎確率1/5、素質により変動
LOCAL = MAX(5 - ABL:キャラ番号:奉仕精神 - ABL:キャラ番号:サド性感, 1)
SIF RAND:LOCAL
	RETURN 0
RETURN 1

