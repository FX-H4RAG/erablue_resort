	RETURN 0
;友人以上
SIF CFLAG:キャラ番号:好感度レベル < 関係閾値:2
	RETURN 0
;４つの好感度要素で信頼度が最も高い
SIF CFLAG:キャラ番号:信頼度 != MAX(CFLAG:キャラ番号:友情度, CFLAG:キャラ番号:信頼度, CFLAG:キャラ番号:恋心度, CFLAG:キャラ番号:性愛度)
	RETURN 0
;２時間に１回のみ発動
SIF TIME - TIME_管理人を労う:キャラ番号:0 < 120
	RETURN 0
;うふふ中ではない
SIF CFLAG:キャラ番号:うふふ
	RETURN 0
RETURN 1

