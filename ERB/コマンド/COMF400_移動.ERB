CALL DRAW_MAP

PRINTL 
DRAWLINE
PRINTL 
PRINTFORML 現在{CFLAG:MASTER:現在位置}:%GETPLACENAME(CFLAG:PLAYER:現在マップ種別, CFLAG:MASTER:現在位置)%にいます

FOR LOCAL,0,21
	SIF CAN_MOVE_1(CFLAG:PLAYER:現在マップ種別, CFLAG:MASTER:現在位置, LOCAL) & 1
		PRINTBUTTONLC @"[{LOCAL}] - %GETPLACENAME(CFLAG:PLAYER:現在マップ種別, LOCAL)%", LOCAL
NEXT
PRINTL
PRINTL 
PRINTBUTTON "[99] - 別のエリアに移動する", 99
IF DAY == 開催予定日取り
	CALLFORM MOVE_ROUTINE_%開催予定祭り名%(0, "特設マップ")
	IF RESULT
		;日程が今日 + 特設マップがある祭りなら特設マップあるよ！　と強調表示
		SETCOLOR カラーパレット("黄")
		PRINT 　　　特設マップ出現中！
		RESETCOLOR
	ENDIF
ENDIF
PRINTL 
PRINTBUTTON @"[999] - 戻る", 999
$INPUT_LOOP
INPUTS

SIF RESULTS == ""
	GOTO INPUT_LOOP
LOCAL:10 = TOINT(RESULTS) - (TOINT(RESULTS) == 0 && RESULTS != "0")
IF LOCAL:10 == -1
	REPLACE RESULTS, CALLNAME:MASTER, "%CALLNAME:MASTER%"
	FOR LOCAL, 1, 18
		SIF GETPLACENAME(CFLAG:PLAYER:現在マップ種別, LOCAL) == RESULTS
			LOCAL:10 = LOCAL
	NEXT
ENDIF
CALL 表示マップ切り替え判定(LOCAL:10)
LOCAL = RESULT
IF LOCAL:10 == 999
	RETURN 0
ELSEIF LOCAL:10 == 99
	;エリア移動選択
	CALL エリア移動選択画面表示
	IF RESULT == -1
		;移動しない場合
		GOTO DRAW_LOOP
	ELSEIF RESULT == 1
		;移動処理
		RESTART
	ENDIF
ELSEIF CFLAG:MASTER:現在位置 == LOCAL:10
	RETURN 0
ELSEIF LOCAL
	GOTO DRAW_LOOP
ELSEIF 存在しない移動先(CFLAG:PLAYER:現在マップ種別, LOCAL:10)
	CLEARLINE 1
	REUSELASTLINE 
	GOTO INPUT_LOOP
ELSE
	;目的地が離れているので、最終目的地として設定
	TFLAG:長距離移動時_目的地格納 = LOCAL:10
	CALLFORM SKIP_MOVE_{CFLAG:PLAYER:現在マップ種別}(LOCAL:10)
	;現在位置を更新し、次も移動の扱いにする
	CFLAG:MASTER:現在位置 = RESULT
	;マップ間をまたいで移動時の処理
	CALL マップ遷移判定処理(CFLAG:PLAYER:現在マップ種別, CFLAG:PLAYER:現在位置)
	IF RESULT
		CFLAG:PLAYER:現在位置 = RESULT
	ENDIF
	TIME += 1
	RESTART
ENDIF
TIME += 1
PREVCOM = 400
STR:0 = 移動

RETURN 0



