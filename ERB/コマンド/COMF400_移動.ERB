;エリア移動
;-------------------------------------------------
@エリア移動選択画面表示
DRAWLINE
PRINTL どのエリアに移動しますか？
DRAWLINE
FOR LOCAL, 0, 10
	TSTR:場所名受渡 = 
	SIF CFLAG:PLAYER:現在マップ種別 == LOCAL
		CONTINUE
	TRYCCALLFORM エリア情報登録_{LOCAL}("エリア名")
		IF TSTR:場所名受渡 != ""
			PRINTBUTTON @"[{LOCAL}]%TSTR:場所名受渡%へ移動する", LOCAL
			PRINTL 
		ENDIF
	CATCH
		BREAK
	ENDCATCH
NEXT

;お祭りエリア
IF 開催予定日取り == DAY
	;特設エリアある？
	TRYCALLFORM MOVE_ROUTINE_%開催予定祭り名%(0, "特設マップ")
	;1が帰ってきたらある！
	IF RESULT
		PRINTBUTTON @"[100]%SUBSTRING(開催予定祭り名, 9)%マップへ移動する", 100
		PRINTL 
	ENDIF
ENDIF

PRINTBUTTON "[999]戻る", 999
PRINTL 
$INPUT_LOOP
BINPUT

SELECTCASE RESULT
	CASE 0
		IF CFLAG:PLAYER:現在マップ種別 == 0
			REUSELASTLINE 
			GOTO INPUT_LOOP
		ENDIF
		;０を入れると移動してない時と見分けがつかないため+100した数値を入れる
		TFLAG:エリア切り替え時_目的地格納 = 100
	CASE 1
		IF CFLAG:PLAYER:現在マップ種別 == 1
			REUSELASTLINE 
			GOTO INPUT_LOOP
		ENDIF
		TRYCALLFORM エリア情報登録_1("エリア名")
		IF TSTR:場所名受渡 == ""
			REUSELASTLINE 
			GOTO INPUT_LOOP
		ENDIF
		;+100した数値を入れる
		TFLAG:エリア切り替え時_目的地格納 = 101
	CASE 100
		IF CFLAG:PLAYER:現在マップ種別 == 100
			REUSELASTLINE 
			GOTO INPUT_LOOP
		ENDIF
		TRYCALLFORM エリア情報登録_100("エリア名")
		;０を入れると移動してない時と見分けがつかないため+100した数値を入れる
		TFLAG:エリア切り替え時_目的地格納 = 200
	CASE 999
		RETURN -1
	CASEELSE
		REUSELASTLINE 
		GOTO INPUT_LOOP
ENDSELECT

