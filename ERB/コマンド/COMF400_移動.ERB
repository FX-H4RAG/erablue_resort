;-----------------------------------------------------------
;マップ描画処理
;2文字セットの半角数字(01とか)は自動でボタン化、全角数字は認識しない
;-----------------------------------------------------------
@DRAW_MAP(ARGS)
#DIMS AA, 40
#DIM SPOT
#DIM MODE
#DIM LOCATION

#DIM LINENUM
#DIM X_POINT
#DIM FOUND_INT

;AAを取得、なければそのまま帰る
VARSET AA

TRYCCALLFORM MAP_VIEWING_{CFLAG:PLAYER:現在マップ種別}(AA)
CATCH
	RETURN 0
ENDCATCH

;-----------------------------------------------------------
;描画処理
;-----------------------------------------------------------
FOR LINENUM, 0, VARSIZE("AA")
	SIF AA:LINENUM == ""
		CONTINUE
	;行ごとに初期化
	X_POINT = 0
	RESULTS = I
	;行の終端までループ
	WHILE RESULTS != "" && STRLENSU(RESULTS) < 3
		;1文字取り出す
		SUBSTRINGU AA:LINENUM, X_POINT, 1
		;数字ならボタンにする
		IF ISNUMERIC(RESULTS)
			;分岐めんどいから必ず2ケタ取る
			SUBSTRINGU AA:LINENUM, X_POINT, 2
			FOUND_INT = TOINT(RESULTS) + (TFLAG:マップ種別 * 100)
			SIF TOINT(RESULTS) == 0
				FOUND_INT = 0
			SETCOLOR カラーパレット("黄")
			PRINTBUTTON RESULTS, FOUND_INT
			RESETCOLOR
			X_POINT += 2
		;ふつうの文字
		ELSE
			TRYCALLFORM DRAW_MAP_BG_{CFLAG:PLAYER:現在マップ種別}_{TFLAG:マップ種別}(RESULTS)
			X_POINT ++
		ENDIF
	WEND
	PRINTL
NEXT

RESETCOLOR


