
@COMNAME404
#FUNCTIONS
TSTR:コマンド名受渡 = 覗く


;===================================================
;コマンドタイプ
;===================================================
@COMTYPE_404
#FUNCTION
TFLAG:コマンドタイプ受渡 = COMTYPE("単独可能")

@COM_TOOLTIP_404
LOCALS = <br>■覗く<br>
LOCALS += "脱衣所・更衣室・浴場などを覗くコマンド。<br>あるいは、野外オナニーをしている姿を覗くコマンド。"
LOCALS += "<br>COMタイプ：単独可能<br>取得ソース：なし"
LOCALS += "<br>固有の取得経験：対象キャラへの肉体熟知(あなた)<br>"
TSTR:ツールチップ受渡 = %LOCALS%


;-------------------------------------------------
;覗く
;-------------------------------------------------
@COM404
#DIM 候補者, 200
VARSET 候補者

;覗き方をRFLAG:コマンド結果受渡し変数に投げる
IF GETBIT(覗き_ABLE(CFLAG:PLAYER:現在マップ種別, CFLAG:PLAYER:現在位置), 1) && GETBIT(覗き_ABLE(CFLAG:PLAYER:現在マップ種別, CFLAG:PLAYER:現在位置), 3)
	DRAWLINE
	PRINTFORM %CALLNAME:PLAYER%は
	IF TALENT:PLAYER:性別 == 2
		PRINT 女性側
	ELSE
		PRINT 男性側
	ENDIF
	PRINTL を覗こうとしたが、誰かが隠れている気配も感じた…
	PRINTBUTTONLC "[1]反対側を覗く", 1
	PRINTBUTTONLC "[3]物陰を覗く", 3
	PRINTL
	$INPUT_LOOP
	INPUT
	IF RESULT == 1 || RESULT == 3
		RFLAG:コマンド結果受渡し変数 = RESULT
	ELSE
		GOTO INPUT_LOOP
	ENDIF
ELSE
	FOR LOCAL, 1, 5
		IF GETBIT(覗き_ABLE(CFLAG:PLAYER:現在マップ種別, CFLAG:PLAYER:現在位置), LOCAL)
			RFLAG:コマンド結果受渡し変数 = LOCAL
			BREAK
		ENDIF
	NEXT
ENDIF

;覗き方で分岐
SELECTCASE RFLAG:コマンド結果受渡し変数
	CASE 1
		;反対側を覗く
		;候補者を持ってくる
		LOCAL:1 = 0
		SELECTCASE CFLAG:PLAYER:現在マップ種別
			CASE 0
				SELECTCASE CFLAG:PLAYER:現在位置
					CASE 7
						LOCAL:2 = 8
					CASE 9
						LOCAL:2 = 11
					CASE 13
						LOCAL:2 = 14
					CASE 8
						LOCAL:2 = 7
					CASE 11
						LOCAL:2 = 9
					CASE 14
						LOCAL:2 = 13
				ENDSELECT
		ENDSELECT
		;全員の居場所をチェック
		FOR LOCAL, 1, CHARANUM
			SIF CFLAG:LOCAL:滞在期間 < 0
				CONTINUE
			SIF CFLAG:LOCAL:現在マップ種別 != CFLAG:PLAYER:現在マップ種別
				CONTINUE
			SIF CFLAG:LOCAL:隠密
				CONTINUE
			IF CFLAG:LOCAL:現在位置 == LOCAL:2
				候補者:(LOCAL:1) = LOCAL
				LOCAL:1 += 1
			ENDIF
		NEXT
		;該当者からランダムで選択
		IF LOCAL:1 == 0
			;該当者なし
			RFLAG:コマンド結果受渡し変数２ = 0
		ELSE
			LOCAL = RAND:(LOCAL:1)
			RFLAG:コマンド結果受渡し変数２ = 候補者:LOCAL
			SIF EXP:(候補者:LOCAL):肉体熟知 < 100
				EXP:(候補者:LOCAL):肉体熟知 += 1
			TCVAR:(候補者:LOCAL):覗き熟知フラグ = 1
		ENDIF
	CASE 2
		;隠れて覗く
		;単純にターゲットの姿を見る、誰もいない時はそもそもコマンドが出ないはず
		RFLAG:コマンド結果受渡し変数２ = TARGET
		SIF EXP:TARGET:肉体熟知 < 100
			EXP:TARGET:肉体熟知 += 1
		TCVAR:TARGET:覗き熟知フラグ = 1
	CASE 3
		;物陰で野外オナニーを見つける
		RFLAG:コマンド結果受渡し変数２ = TARGET
		SIF EXP:TARGET:肉体熟知 < 100
			EXP:TARGET:肉体熟知 += 1
		TCVAR:TARGET:覗き熟知フラグ = 1
	CASE 4
		;候補者を持ってくる
		LOCAL:1 = 0
		;全員の居場所をチェック
		FOR LOCAL, 1, CHARANUM
			SIF CFLAG:LOCAL:滞在期間 < 0
				CONTINUE
			SIF CFLAG:LOCAL:現在マップ種別 != CFLAG:PLAYER:現在マップ種別
				CONTINUE
			SIF CFLAG:LOCAL:隠密
				CONTINUE
			IF CFLAG:PLAYER:現在位置 == 710
				IF GROUPMATCH(CFLAG:LOCAL:現在位置, 702, 703, 704, 705, 706, 707, 708)
					候補者:(LOCAL:1) = LOCAL
					LOCAL:1 += 1
				ENDIF
			ELSE
				IF GROUPMATCH(CFLAG:LOCAL:現在位置, 802, 803, 804, 805, 806, 807, 808)
					候補者:(LOCAL:1) = LOCAL
					LOCAL:1 += 1
				ENDIF
			ENDIF
		NEXT
		;該当者からランダムで選択
		IF LOCAL:1 == 0
			;該当者なし
			RFLAG:コマンド結果受渡し変数２ = 0
		ELSE
			LOCAL = RAND:(LOCAL:1)
			RFLAG:コマンド結果受渡し変数２ = 候補者:LOCAL
			SIF EXP:(候補者:LOCAL):肉体熟知 < 100
				EXP:(候補者:LOCAL):肉体熟知 += 1
			TCVAR:(候補者:LOCAL):覗き熟知フラグ = 1
		ENDIF
ENDSELECT

TIME += 3
RETURN 1
;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE404
;移動実行判定
SIF !TFLAG:ゲームフェイズ管理
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(404) && GLOBAL_COMABLE_TYPE("隠密")
	RETURN RESULT
SIF !覗き_ABLE(CFLAG:PLAYER:現在マップ種別, CFLAG:PLAYER:現在位置)
	RETURN 0
RETURN 1

;-------------------------------------------------
;覗ける場所設定
;-------------------------------------------------
@覗き_ABLE(ARG:1, ARG)
#FUNCTION

LOCAL = 0
SELECTCASE ARG:1
	CASE 0
		;普通に覗ける場所
		IF GROUPMATCH(ARG, 7, 9, 13) && TALENT:PLAYER:性別 == 2
			SETBIT LOCAL, 1
		ELSEIF GROUPMATCH(ARG, 8, 11, 14) && TALENT:PLAYER:性別 != 2
			SETBIT LOCAL, 1
		ENDIF
		;隠密時に潜んで覗ける場所
		IF GROUPMATCH(ARG, 8, 11, 12, 14) && CFLAG:PLAYER:隠密 && TALENT:PLAYER:性別 == 2 && !CFLAG:TARGET:隠密
			SETBIT LOCAL, 2
		ELSEIF GROUPMATCH(ARG, 7, 9, 10, 13) && CFLAG:PLAYER:隠密 && TALENT:PLAYER:性別 != 2 && !CFLAG:TARGET:隠密
			SETBIT LOCAL, 2
		ENDIF
		;自分は隠密してないのにTARGETが隠密している時
		SIF !CFLAG:PLAYER:隠密 && CFLAG:TARGET:隠密
			SETBIT LOCAL, 3
		;覗き専用の場所
		SIF GROUPMATCH(ARG, 710, 810)
			SETBIT LOCAL, 4
ENDSELECT

RETURNF LOCAL

