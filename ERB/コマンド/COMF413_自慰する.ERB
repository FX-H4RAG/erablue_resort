@COMNAME413
#FUNCTIONS
TSTR:コマンド名受渡 = 自慰する

;===================================================
;コマンドタイプ
;===================================================
@COMTYPE_413
#FUNCTION
TFLAG:コマンドタイプ受渡 = COMTYPE("単独可能_隠密")

@COM413
#DIM 自慰部位


自慰部位 = WEIGHTED_RANDOM_PART(PLAYER)

SELECTCASE 自慰部位
	CASE 0
		EXP:PLAYER:Ｃ経験 ++
		EXP:PLAYER:Ｃ絶頂経験 ++
		PALAM:PLAYER:快Ｃ = 0
	CASE 1
		EXP:PLAYER:Ｖ経験 ++
		EXP:PLAYER:Ｖ絶頂経験 ++
		PALAM:PLAYER:快Ｖ = 0
	CASE 2
		EXP:PLAYER:Ａ経験 ++
		EXP:PLAYER:Ａ絶頂経験 ++
		PALAM:PLAYER:快Ａ = 0
	CASE 3
		EXP:PLAYER:Ｂ経験 ++
		EXP:PLAYER:Ｂ絶頂経験 ++
		PALAM:PLAYER:快Ｂ = 0
ENDSELECT

TIME += 30
IF GETBIT(TALENT:PLAYER:性別, 1)
	BASE:PLAYER:勃起 = MAXBASE:PLAYER:勃起
	SIF !TALENT:PLAYER:射精不可
		EXP:PLAYER:射精経験 ++
ENDIF
EXP:PLAYER:絶頂経験 ++
EXP:PLAYER:自慰経験 ++
RFLAG:自慰選択フラグ = 1

RETURN 1
;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE413
#DIM キャラ番号
#DIM 非隠密者あり
#DIM 隠密者あり

;自慰する実行判定
SIF SAVESTR:ゲームフェイズ管理 != "通常モード"
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(413)
	RETURN RESULT
;性感帯無い場合駄目
SIF !HAS_EROGENOUS_ZONE(TARGET)
	RETURN 0
;誰かいるとダメ、隠密時はOK
非隠密者あり = 0
隠密者あり = 0
FOR LOCAL, 1, CHARANUM
	SIF TARGET:LOCAL < 1
		BREAK
	IF !CFLAG:LOCAL:隠密
		非隠密者あり = 1
	ELSEIF CFLAG:LOCAL:隠密
		隠密者あり = 1
	ENDIF
NEXT
SIF 非隠密者あり && !CFLAG:PLAYER:隠密
	RETURN 0
;一緒に隠密時禁止
SIF CFLAG:PLAYER:隠密 && 隠密者あり
	RETURN 0
;ハーヴィンオナホ時禁止
SIF MODE_存在判定_プレイヤー側("ハーヴィンオナホ系", PLAYER)
	RETURN 0
SIF MODE_存在判定_プレイヤー側("同行系", PLAYER)
	RETURN 0
;飲み会時禁止
SIF TFLAG:調教モード == 3
	RETURN 0
RETURN 1

;-------------------------------------------------
;実行時メッセージ
;-------------------------------------------------
@MESSAGE_COM413
PRINTFORM %CALLNAME:PLAYER%は
IF TFLAG:調教モード == 2
	PRINTFORM %CALLNAME:TARGET%の眼の前で
ELSEIF GET_TARGETNUM() > 0 && CFLAG:PLAYER:隠密
	PRINT 見つからないように隠れながら
ELSEIF MYROOM(CFLAG:PLAYER:現在マップ種別, CFLAG:PLAYER:現在位置)
	PRINT 自室でゆったりと
ELSE
	PRINT 誰も居ない場所でこっそりと
ENDIF
PRINTL 自らを慰めた……


