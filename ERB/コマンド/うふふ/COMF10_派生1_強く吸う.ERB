
@COMNAME_S10_1
#FUNCTIONS
SELECTCASE COMMODE()
CASE 1 TO 2
	TSTR:コマンド名受渡 = 強く吸う
CASE 3
	TSTR:コマンド名受渡 = 強く吸わせる
ENDSELECT

;複数モード_ダミーをリセット
複数モード_ダミー = 0

;===================================================
;コマンドタイプ
;===================================================
@COMTYPE_S_10_1
#FUNCTION
TFLAG:コマンドタイプ受渡 = COMTYPE("うふふ_被挿入中")
弱点コマンドカテゴリ = B
同時モード許可 = 1
助手モード許可 = 1

@COM_S10_1
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
;消費体力、気力
DOWNBASE:体力 += 0
DOWNBASE:気力 += 20

CALL SOURCE_CALC_露出(TARGET, PLAYER, 50)
CALL SOURCE_CALC_接触(TARGET, PLAYER, 250)
CALL SOURCE_CALC_快Ｂ(TARGET, PLAYER, 250)
CALL SOURCE_CALC_快Ｂ(TARGET, PLAYER, 250)

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:同性愛経験 += 3
	EXP:PLAYER:同性愛経験 += 3
ENDIF


SIF TALENT:恋慕
	EXP:愛情経験 += 1

RETURN 1


;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE_S10_1
;強く吸う実行判定
SIF !TFLAG:ゲームフェイズ管理
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE_S("10_1")
	RETURN RESULT
;通常、同時なら乳首吸いモードじゃない時はアウト
SIF !MODE_確認("乳首吸い", TARGET) && COMMODE() < 3
	RETURN 0
;助手モードなら助手乳首吸いモードじゃないとアウト
SIF !MODE_確認("助手乳首吸い", TARGET) && COMMODE() == 3
	RETURN 0
;助手も同じ体位モードでいるなら同時モードじゃないとダメ
SIF MODE_確認("乳首吸い", 助手は誰だ()) && COMMODE() != 2
	RETURN 0
;助手が同じ体位モードじゃないなら同時モードではダメ
SIF !MODE_確認("乳首吸い", 助手は誰だ()) && COMMODE() == 2
	RETURN 0
RETURN 1

