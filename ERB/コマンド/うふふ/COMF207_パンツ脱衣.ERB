;-------------------------------------------------
;パンツ脱衣
;-------------------------------------------------
@COMNAME207
#FUNCTIONS
IF TEQUIP:下半身下着あり == 2
	TSTR:コマンド名受渡 = 前張りを剥がす
ELSEIF TEQUIP:下半身下着あり == 3
	TSTR:コマンド名受渡 = ふんどしを脱がす
ELSE
	TSTR:コマンド名受渡 = 下着を脱がす
ENDIF

;===================================================
;コマンドタイプ
;===================================================
@COMTYPE_207
#FUNCTION
TFLAG:コマンドタイプ受渡 = COMTYPE("うふふ")

@COM_TOOLTIP_207
LOCALS = <br>■下着を脱がす<br>
LOCALS += "相手の下半身の下着を脱がせるコマンド。<br>下半身の下着が前張りの場合、[前張りを剥がす]に変化。<br>下半身の下着がふんどしの場合、[ふんどしを脱がす]に変化。<br>下半身下着抜き取り可の場合、下半身の服があっても実行出来る。"
LOCALS += "<br>COMタイプ：うふふ<br>取得ソース：なし"
LOCALS += "<br>固有の取得経験：なし<br>"
TSTR:ツールチップ受渡 = %LOCALS%

@COM207
;口上出力のため実際の脱衣処理はEVENTCOMENDで


RETURN 1


@CAN_COM207(ARG)
SKIPDISP ARG
PRINTL 下半身脱衣
;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
A = 0
S = 0
;すべての命令に共通の要素を考慮

CALL COM_ORDER
;ABL:露出癖
IF ABL:露出癖
	SIF S
		PRINT  + 
	A += ABL:露出癖 * 10
	PRINT 露出癖
	PRINTV 'LV,ABL:露出癖,'(,ABL:露出癖 * 10,')
	S = 1
ENDIF
IF MARK:快楽刻印
	SIF S
		PRINT  + 
	A += MARK:快楽刻印 * 1
	PRINT 快楽刻印
	PRINTV 'LV,MARK:快楽刻印,'(,MARK:快楽刻印 * 1,')
	S = 1
ENDIF
;PALAM:欲情
IF GETPALAMLV(PALAM:欲情,10)
	SIF S
		PRINT  + 
	A += GETPALAMLV(PALAM:欲情,10) * 5
	PRINT 欲情
	PRINTV 'LV,GETPALAMLV(PALAM:欲情,10),'(,GETPALAMLV(PALAM:欲情,10) * 5,')
	S = 1
ENDIF
;恥じらい
IF TALENT:羞恥心 > 0
	PRINT  - 
	A -= 1
	PRINT 恥じらい
	PRINTV '(,1,')
	S = 1
ENDIF
;男嫌い（恋慕、親愛で無効）
IF TALENT:性別嗜好 & 1 && !(TALENT:PLAYER:性別 & 1) && (!TALENT:恋慕 || PLAYER != MASTER) && TALENT:性別嗜好 > 0
	PRINT  - 
	A -= 5
	PRINT 男嫌い
	PRINTV '(,5,')
	S = 5
ENDIF
;恋慕
IF TALENT:恋慕
	SIF S
		PRINT  + 
	A += 5
	PRINT 恋慕
	PRINTV '(,5,')
	S = 5
ENDIF
;親愛
IF TALENT:恋慕 > 1
	SIF S
		PRINT  + 
	A += 5
	PRINT 親愛
	PRINTV '(,5,')
	S = 5
ENDIF

;合計を表示(14以上で実行)
PRINT  = 
PRINTV A

V = 20
SIF A < V
	PRINT  < 
SIF A == V
	PRINT  = 
SIF A > V
	PRINT  > 
PRINT 実行値
PRINTV V

WAIT
SKIPDISP 0
;実行できない
SIF A < V
	RETURN 0
RETURN 1
;-------------------------------------------------
;実行判定
;-------------------------------------------------

@COM_ABLE207
;下半身下着脱衣
SIF !TFLAG:100
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(207)
	RETURN RESULT
;既に着ていない
SIF !TEQUIP:下半身下着あり
	RETURN 0
;服がある
SIF TEQUIP:下半身服あり && !TEQUIP:下半身下着抜き取り可
	RETURN 0
;タイツがある
SIF TEQUIP:下タイツあり
	RETURN 0

RETURN 1


