@CAN_コスプレ判定(ARG, 服難易度 = 15)
#DIM 服難易度

SIF TARGET == MASTER
	RETURN 1

SKIPDISP ARG
PRINTL コスプレ
;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
A = 0
S = 0
;すべての命令に共通の要素を考慮

CALL COM_ORDER
;ABL:露出癖
IF ABL:露出癖
	SIF S
		PRINT  + 
	A += ABL:露出癖 * 10
	PRINT 露出癖
	PRINTFORM LV{ABL:露出癖}({ABL:露出癖 * 10})
	S = 1
ENDIF
IF MARK:快楽刻印
	SIF S
		PRINT  + 
	A += MARK:快楽刻印 * 1
	PRINT 快楽刻印
	PRINTFORM LV{MARK:快楽刻印}({MARK:快楽刻印 * 1})
	S = 1
ENDIF
;PALAM:欲情
IF GETPALAMLV(PALAM:欲情,10)
	SIF S
		PRINT  + 
	A += GETPALAMLV(PALAM:欲情,10) * 5
	PRINT 欲情
	PRINTFORM LV{GETPALAMLV(PALAM:欲情,10)}({GETPALAMLV(PALAM:欲情,10) * 5})
	S = 1
ENDIF
;恥じらい
IF TALENT:羞恥心 > 0
	PRINT  - 
	A -= 1
	PRINT 恥じらい
	PRINT (1)
	S = 1
ENDIF
;男嫌い（恋慕、親愛で無効）
IF TALENT:性別嗜好 & 1 && !(TALENT:PLAYER:性別 & 1) && (!TALENT:恋慕 || PLAYER != MASTER)
	PRINT  - 
	A -= 5
	PRINT 男嫌い
	PRINT (5)
	S = 5
ENDIF
;恋慕
IF TALENT:恋慕
	SIF S
		PRINT  + 
	A += 5
	PRINT 恋慕
	PRINT (5)
	S = 5
ENDIF
;セフレ
IF TALENT:セフレ
	SIF S
		PRINT  + 
	A += 3
	PRINT セフレ
	PRINT (3)
	S = 3
ENDIF

;言いなり
IF TCVAR:言いなり
	SIF S
		PRINT  + 
	A += 999
	PRINT あなたの言いなり
	PRINT (999)
	S = 999
ENDIF

;合計を表示(20以上で実行)
PRINT  = 
PRINTV A

SIF A < 服難易度
	PRINT  < 
SIF A == 服難易度
	PRINT  = 
SIF A > 服難易度
	PRINT  > 
PRINT 実行値
PRINTV 服難易度

WAIT
SKIPDISP 0
;実行できない
SIF A < 服難易度
	RETURN 0
RETURN 1
