DOWNBASE:ARG:気力 += 20
CALL SOURCE_CALC_快Ｃ(TARGET, -1,100)
CALL SOURCE_CALC_露出(TARGET, PLAYER, 10)
;-------------------------------------------------
;経験の処理
;-------------------------------------------------

RETURN 1
