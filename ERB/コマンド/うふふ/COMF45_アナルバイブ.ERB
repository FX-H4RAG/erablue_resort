;-------------------------------------------------
;アナルバイブ
;道具使用コマンド、レベル2
;-------------------------------------------------
@COMNAME45
#FUNCTIONS
TSTR:コマンド名受渡 = アナルバイブ
SIF MODE_確認("アナルバイブ", TARGET)
	TSTR:コマンド名受渡 = アナルバイブ解除

;弱点コマンド欄に専用の文字列を表示したい場合、これを設定すること
弱点コマンド欄表示名 = アナルバイブ

;複数モード_ダミーをリセット
複数モード_ダミー = 0

;===================================================
;コマンドタイプ
;===================================================
@COMTYPE_45
#FUNCTION
TFLAG:コマンドタイプ受渡 = COMTYPE("道具系")
;弱点コマンドカテゴリ = A
SIF MODE_確認("アナルバイブ", TARGET)
	弱点コマンドカテゴリ = 
同時モード許可 = 1
助手モード許可 = 1

@COM_TOOLTIP_45
LOCALS = <br>■アナルバイブ<br>
LOCALS += "電動のアナルバイブを挿入し、腸内を刺激するコマンド。<br>アナルバイブ装備状態となり、外すか性行為を終了するまで持続的に快楽が発生する。"
LOCALS += "<br>COMタイプ：道具系<br>取得ソース：快Ａ・露出・接触・苦痛"
LOCALS += "<br>固有の取得経験：道具使用経験(あなた)・Ａ経験(TARGET)<br>"
TSTR:ツールチップ受渡 = %LOCALS%

@COM45
;着脱の処理
IF MODE_確認("アナルバイブ", TARGET)
	CALL MODE_DELETE("アナルバイブ")
ELSE
	CALL MODE_CHANGE("アナルバイブ")
ENDIF
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

CALL SOURCE_CALC_快Ａ(TARGET, PLAYER,250)
CALL SOURCE_CALC_露出(TARGET, PLAYER, 50)
CALL SOURCE_CALC_接触(TARGET, PLAYER, 20)

LOCAL = 250 * PAIN_CHECK_A(TARGET) / 1000
CALL SOURCE_CALC_苦痛(TARGET, PLAYER, LOCAL)

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;Ａ経験
EXP:Ａ経験 ++

;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:同性愛経験 += 1
	EXP:PLAYER:同性愛経験 += 1
ENDIF

EXP:PLAYER:道具使用経験 ++

;-------------------------------------------------
;モードの設定
;-------------------------------------------------
CALL MODE_DELETE("Ａ挿入系")

RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------

@COM_ABLE45
;アナルバイブ実行判定
SIF !TFLAG:ゲームフェイズ管理
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(45)
	RETURN RESULT
;解除はいつでも可能
SIF MODE_確認("アナルバイブ", TARGET)
	RETURN 1
;アイテムを持っているか、アイテムなし設定でないとダメ
SIF ITEM:5 == 0 && NOITEM == 0
	RETURN 0

;下半身着衣
;後鎧、めくれない服、タイツ、前張りがあると無理
SIF TEQUIP:下腹部後鎧あり
	RETURN 0
SIF TEQUIP:下半身服あり && (!TEQUIP:スカートめくり可 && !TEQUIP:ずらし可)
	RETURN 0
SIF TEQUIP:下タイツあり && !TEQUIP:下タイツ破れ
	RETURN 0
SIF TEQUIP:下半身下着あり == 2
	RETURN 0
	
;浣腸＋アナルプラグ使用中はダメ
SIF TEQUIP:21
	RETURN 0
;アナルビーズ使用中は不可
SIF TEQUIP:15
	RETURN 0
;バルーン使用中は不可
SIF TEQUIP:22
	RETURN 0
;電極使用中は不可
SIF TEQUIP:23
	RETURN 0
RETURN 1

