;-------------------------------------------------
;実行判定
;-------------------------------------------------

@COM_ABLE48
;搾乳器実行判定
SIF !TFLAG:ゲームフェイズ管理
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(48)
	RETURN RESULT
;解除はいつでも可能
SIF MODE_確認("搾乳器", TARGET)
	RETURN 1
;アイテムを持っているか、アイテムなし設定でないとダメ
SIF ITEM:11 == 0 && NOITEM == 0
	RETURN 0
;母乳体質でないと使えない
SIF TALENT:母乳体質 == 0
	RETURN 0
;性癖を持ってないと使えない
SIF 性癖素質:搾乳プレイ == 0
	RETURN 0
;勃起してない陥没乳首はダメ
SIF TALENT:陥没乳首 && !TCVAR:陥没乳首露出フラグ
	RETURN 0
	
;上半身着衣
;鎧、服、タイツ、ブラ等があると無理
SIF TEQUIP:上半身鎧あり
	RETURN 0
SIF TEQUIP:上半身服あり
	RETURN 0
SIF TEQUIP:上タイツあり && !TEQUIP:上タイツ破れ
	RETURN 0
SIF TEQUIP:上半身下着あり
	RETURN 0

;Ｂ感度2以下はダメ
SIF ABL:TARGET:Ｂ感覚 <= 2
	RETURN 0
;オトコだとダメ
SIF !(TALENT:性別 & 1)
	RETURN 0
;シャワー中はダメ
SIF TEQUIP:32
	RETURN 0
;新妻プレイ中はダメ
SIF TEQUIP:33
	RETURN 0
;ベッドルームでないとダメ
SIF !BEDROOM(CFLAG:MASTER:現在マップ種別, CFLAG:PLAYER:現在位置)
	RETURN 0
RETURN 1


