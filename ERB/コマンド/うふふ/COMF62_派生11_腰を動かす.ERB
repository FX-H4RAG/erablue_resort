
@COMNAME_S62_11
#FUNCTIONS
TSTR:コマンド名受渡 = 腰を動かす
SIF MODE_確認_完全一致("Ａ騎乗位", TARGET, PLAYER) > -1
	TSTR:コマンド名受渡 = 腰を振る


;===================================================
;コマンドタイプ
;===================================================
@COMTYPE_S_62_11
#FUNCTION
TFLAG:コマンドタイプ受渡 = COMTYPE("Ａ系_被挿入中")
弱点コマンドカテゴリ = C_ちんこ
オートコマンド許可 = 1
連続オート許可 = 1

@COM_TOOLTIP_S62_11
LOCALS = <br>■腰を動かす<br>
LOCALS += "腰を動かし、相手に快楽を与えるコマンド。<br>Ａ騎乗位の時、「腰を振る」に変化し、効果が上昇する。"
LOCALS += "<br>COMタイプ：Ａ系or被挿入中<br>取得ソース：快Ｃ・露出・接触"
LOCALS += "<br>固有の取得経験：Ｃ性交経験_Ａ挿入(TARGET)<br>"
TSTR:ツールチップ受渡 = %LOCALS%

@COM_S62_11
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
CALL SOURCE_CALC_快Ａ(PLAYER, TARGET, 400)
CALL SOURCE_CALC_露出(TARGET, PLAYER, 50)
CALL SOURCE_CALC_接触(TARGET, PLAYER, 150)
CALL SOURCE_CALC_快Ｃ(TARGET, PLAYER, 400)
IF MODE_確認_完全一致("Ａ騎乗位", TARGET, PLAYER) > -1
	CALL SOURCE_CALC_快Ｃ(TARGET, PLAYER, 400)
	CALL SOURCE_CALC_快Ａ(PLAYER, TARGET, 400)
ENDIF

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:Ｃ性交経験_Ａ挿入 ++
EXP:PLAYER:Ａ性交経験 ++
;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:同性愛経験 += 4
	EXP:PLAYER:同性愛経験 += 4
ENDIF

EXP:愛情経験 += TALENT:恋慕 * 2

RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE_S62_11
;腸内を締める実行判定
SIF SAVESTR:ゲームフェイズ管理 != "通常モード"
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE_S("62_11")
	RETURN RESULT
;挿入系モードじゃない時はアウト
SIF MODE_確認_完全一致("Ａ挿入系", TARGET, PLAYER) < 0
	RETURN 0
RETURN 1

;-------------------------------------------------
;実行時メッセージ
;-------------------------------------------------
@MESSAGE_COM_S62_11
IF MODE_確認_完全一致("Ａ騎乗位", TARGET, PLAYER) > -1
	PRINTFORML %CALLNAME:PLAYER%は自ら腰を振って、%CALLNAME:TARGET%の陰茎を責め立てている…
ELSE
	PRINTFORML %CALLNAME:PLAYER%は%CALLNAME:TARGET%を迎え入れるように腰を動かし、互いに快楽を高めあっている…
ENDIF

