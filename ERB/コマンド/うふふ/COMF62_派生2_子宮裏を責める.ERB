
@COMNAME_S62_2
#FUNCTIONS
TSTR:コマンド名受渡 = 子宮裏を責める

;===================================================
;コマンドタイプ
;===================================================
@COMTYPE_S_62_2
#FUNCTION
TFLAG:コマンドタイプ受渡 = COMTYPE("Ａ系")
SIF CFLAG:TARGET:睡眠
	TFLAG:コマンドタイプ受渡 = COMTYPE("セクハラ強")
睡眠中許可 = 1
弱点コマンドカテゴリ = A_V
同時モード許可 = 3
オートコマンド許可 = 1
連続オート許可 = 1

@COM_TOOLTIP_S62_2
LOCALS = <br>■子宮裏を責める<br>
LOCALS += "腸内から子宮裏へ、ペニスで強い刺激を与えるコマンド。<br>Ａ挿入系モード時のみ実行可能。"
LOCALS += "<br>COMタイプ：Ａ系<br>取得ソース：快Ａ・快Ｖ・接触・苦痛"
LOCALS += "<br>固有の取得経験：Ａ性交経験(TARGET)・ポルチオ開発(TARGET)・Ｃ性交経験_Ａ挿入(PLAYER)<br>"
TSTR:ツールチップ受渡 = %LOCALS%

@COM_S62_2
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------





RCVAR:ポルチオ開発フラグ = 1
CALL SOURCE_CALC_快Ａ(TARGET, PLAYER, 500)
CALL SOURCE_CALC_快Ｖ(TARGET, PLAYER, 200)
CALL SOURCE_CALC_接触(TARGET, PLAYER, 150)
CALL SOURCE_CALC_快Ｃ(PLAYER, TARGET, 500)


;苦痛
LOCAL = 500 * PAIN_CHECK_A(TARGET) / 1000
CALL SOURCE_CALC_苦痛(TARGET, PLAYER, LOCAL)


;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:PLAYER:Ｃ性交経験_Ａ挿入 ++
EXP:Ａ性交経験 ++

;同性愛　レズなら戻り値1ゲイなら戻り値2
IF HETEROSEX(TARGET,PLAYER)
	EXP:同性愛経験 += 4
	EXP:PLAYER:同性愛経験 += 4
ENDIF

EXP:愛情経験 += TALENT:恋慕 * 2

RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE_S62_2
;子宮裏を責める実行判定
SIF SAVESTR:ゲームフェイズ管理 != "通常モード"
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE_S("62_2")
	RETURN RESULT
;Ａ挿入系モードじゃない時はアウト
SIF MODE_確認_完全一致("Ａ挿入系", PLAYER, TARGET) < 0
	RETURN 0
;Vがない場合アウト
SIF TALENT:TARGET:Ｖ感度 == -2
	RETURN 0
SIF GETBIT(TALENT:TARGET:性別, 0) == 0
	RETURN 0
RETURN 1

;-------------------------------------------------
;実行時メッセージ
;-------------------------------------------------
@MESSAGE_COM_S62_2
#DIM 同時キャラ番号
PRINTFORM %CALLNAME:PLAYER%は

IF FLAG:モード管理 == 2
	FOR 同時キャラ番号, 0, 同時モード_選択数
		SIF 同時キャラ番号 > 0
			PRINT 、
		PRINTFORM %CALLNAME:(同時モード_選択キャラ:同時キャラ番号)%
	NEXT
	PRINT の子宮裏を直腸から圧迫して刺激した
	RETURN 0
ENDIF

PRINTFORML %CALLNAME:TARGET%の子宮裏を直腸から圧迫して刺激した


