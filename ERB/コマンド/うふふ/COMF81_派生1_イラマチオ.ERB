
@COMNAME_S81_1
#FUNCTIONS
TSTR:コマンド名受渡 = イラマチオ
SIF TALENT:TARGET:角あり
	TSTR:コマンド名受渡 = ハンドルイラマ


;===================================================
;コマンドタイプ
;===================================================
@COMTYPE_S_81_1
#FUNCTION
TFLAG:コマンドタイプ受渡 = COMTYPE("うふふ")
;複数人を対象に同時にできるか、出来るなら上限人数を入れる
;同時モード許可 = 

;ランダム弱点の候補にするかを設定。敏感素質を考慮に入れるため、CVABSを入れること
;また特定部位が必要な場合、「_ちんこ」や「_角」などのように追加で表記する
;弱点コマンドカテゴリ = 

;キャラが自動で使用しても良い場合に入れる
;オートコマンド許可 = 1

@COM_TOOLTIP_S81_1
LOCALS = <br>■イラマチオ<br>
LOCALS += "相手の喉奥までペニスを入れるコマンド。<br>対象に角がある時、「ハンドルイラマ」に変化し、効果が上昇する。"
LOCALS += "<br>COMタイプ：うふふ<br>取得ソース：快Ｓ・露出・接触・苦痛"
LOCALS += "<br>固有の取得経験：口淫経験(TARGET)<br>"
TSTR:ツールチップ受渡 = %LOCALS%

@COM_S81_1

CALL MODE_CHANGE("イラマチオ", TARGET, PLAYER)

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
CALL SOURCE_CALC_快Ｃ(PLAYER, TARGET, 150)
CALL SOURCE_CALC_快Ｓ(TARGET, PLAYER, 100)
CALL SOURCE_CALC_露出(TARGET, PLAYER, 30)
CALL SOURCE_CALC_接触(TARGET, PLAYER, 120)
CALL SOURCE_CALC_奉仕(TARGET, PLAYER, 350)
CALL SOURCE_CALC_苦痛(TARGET, PLAYER, 100)
IF ABL:TARGET:技巧 < 3
	;技巧がないとめっちゃ苦しい
	CALL SOURCE_CALC_苦痛(TARGET, PLAYER, 500)
ELSE
	CALL SOURCE_CALC_苦痛(TARGET, PLAYER, 200)
ENDIF
IF TALENT:TARGET:角あり
	CALL SOURCE_CALC_快Ｓ(TARGET, PLAYER, 50)
	CALL SOURCE_CALC_奉仕(TARGET, PLAYER, 100)
ENDIF

CALL SOURCE_CALC_不潔(TARGET, PLAYER, 250)

;奉仕快楽
RCVAR:TARGET:奉仕コマンドフラグ = 1
RCVAR:TARGET:苦痛コマンドフラグ = 1
RCVAR:TARGET:汎用喘ぎ_文節低減フラグ = 1
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;フェラ経験
EXP:口淫経験 += 1

;同性愛
SIF 同性愛性癖判定(TARGET,PLAYER)
	EXP:TARGET:同性愛経験 += 4
SIF 同性愛性癖判定(PLAYER,TARGET)
	EXP:PLAYER:同性愛経験 += 4

SIF PLAYER != MASTER
	EXP:PLAYER:嗜虐快楽経験 += 1

RETURN 1

@CAN_COM_S81_1(ARG)
SKIPDISP ARG
PRINTFORML イラマチオ(%CALLNAME:TARGET%)
;-------------------------------------------------
;実行判定処理
;-------------------------------------------------
A = 0
S = 0

;すべての命令に共通の要素を考慮

CALL COM_ORDER

;ABL:欲望
IF ABL:欲望
	SIF S
		PRINT  + 
	A += ABL:欲望 * 1
	PRINT 欲望
	PRINTV 'LV,ABL:欲望,'(,ABL:欲望 * 1,')
	S = 1
ENDIF
;ABL:奉仕精神
IF ABL:奉仕精神
	SIF S
		PRINT  + 
	A += ABL:奉仕精神 * 4
	PRINT 奉仕精神
	PRINTV 'LV,ABL:奉仕精神,'(,ABL:奉仕精神 * 4,')
	S = 1
ENDIF
;ABL:精液中毒
IF ABL:精液中毒
	SIF S
		PRINT  + 
	A += ABL:精液中毒 * 1
	PRINT 精液中毒
	PRINTV 'LV,ABL:精液中毒,'(,ABL:精液中毒 * 1,')
	S = 1
ENDIF

IF MARK:苦痛刻印
	SIF S
		PRINT  + 
	A += MARK:苦痛刻印 * 1
	PRINT 苦痛刻印
	PRINTV 'LV,MARK:苦痛刻印,'(,MARK:苦痛刻印 * 1,')
	S = 1
ENDIF
;PALAM:欲情
IF GETPALAMLV(PALAM:欲情,5)
	SIF S
		PRINT  + 
	A += GETPALAMLV(PALAM:欲情,5) * 1
	PRINT 欲情
	PRINTV 'LV,GETPALAMLV(PALAM:欲情,5),'(,GETPALAMLV(PALAM:欲情,5) * 1,')
	S = 1
ENDIF
;汚臭鈍感
IF TALENT:汚臭耐性 > 0
	SIF S
		PRINT  + 
	A += 1
	PRINT 汚臭鈍感
	PRINTV '(,1,')
	S = 1
ENDIF
;汚臭敏感
IF TALENT:汚臭耐性 < 0
	A -= 3
	PRINT 汚臭敏感
	PRINTV '(,3,')
	S = 1
ENDIF
;献身的
IF TALENT:献身的
	SIF S
		PRINT  + 
	A += 6
	PRINT 献身的
	PRINTV '(,6,')
	S = 1
ENDIF
;男嫌い（恋慕、親愛で無効）
IF TALENT:性別嗜好 & 1 && !(TALENT:PLAYER:性別 & 1) && (!TALENT:恋慕 || PLAYER != MASTER)
	PRINT  - 
	A -= 5
	PRINT 男嫌い
	PRINTV '(,5,')
	S = 5
ENDIF
;恋慕
IF TALENT:恋慕
	SIF S
		PRINT  + 
	A += 5
	PRINT 恋慕
	PRINTV '(,5,')
	S = 5
ENDIF
;親愛
IF TALENT:恋慕 > 1
	SIF S
		PRINT  + 
	A += 5
	PRINT 親愛
	PRINTV '(,5,')
	S = 5
ENDIF

;言いなり
IF TCVAR:言いなり
	SIF S
		PRINT  + 
	A += 999
	PRINT あなたの言いなり
	PRINTV '(,999,')
	S = 999
ENDIF

;合計を表示(40以上で実行)
PRINT  = 
PRINTV A

V = 40
SIF A < V
	PRINT  < 
SIF A == V
	PRINT  = 
SIF A > V
	PRINT  > 
PRINT 実行値
PRINTV V

WAIT
SKIPDISP 0
;実行できない
SIF A < V
	RETURN 0
RETURN 1

