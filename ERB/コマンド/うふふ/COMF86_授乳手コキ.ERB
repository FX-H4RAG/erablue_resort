@COMNAME86
#FUNCTIONS
TSTR:コマンド名受渡 = 授乳手コキ

;===================================================
;コマンドタイプ
;===================================================
@COMTYPE_86
#FUNCTION
TFLAG:コマンドタイプ受渡 = COMTYPE("うふふ")
弱点コマンドカテゴリ = リダイレクト80_1
オートコマンド許可 = 3

@COM_TOOLTIP_86
CALL COM_TOOLTIP_S80_1

@COM86
CALL COM_S80_1

@CAN_COM86(ARG)
CALL CAN_COM_S80_1(ARG)
RETURN RESULT

;-------------------------------------------------
;実行判定
;-------------------------------------------------

@COM_ABLE86
;授乳手コキ実行判定
SIF !TFLAG:ゲームフェイズ管理
	RETURN 0
SIF GLOBAL_COMABLE(86)
	RETURN RESULT
;ちんこがない場合駄目
SIF TALENT:PLAYER:Ｃ感度 == -2
	RETURN 0
;Bがない場合駄目
SIF TALENT:TARGET:Ｂ感度 == -2
	RETURN 0
;調教者がオトコか半人半妖かふたなりじゃないとダメ
SIF !(TALENT:PLAYER:性別 & 2)
	RETURN 0
;縄使用中は不可
; SIF TEQUIP:縄
; 	RETURN 0
;陥没乳首は乳首露出させてからでないと不可
SIF TALENT:陥没乳首 && !TCVAR:陥没乳首露出フラグ
	RETURN 0
;手、ペニス、胸を何かに使ってる・届かないなら無理
SIF TEQUIP:PLAYER:ペニス
	RETURN 0
SIF TEQUIP:TARGET:指
	RETURN 0
SIF TEQUIP:TARGET:胸
	RETURN 0
;上半身着衣
;鎧、差し込めないorはだけない服、タイツ、ブラ等があると無理
SIF TEQUIP:上半身鎧あり
	RETURN 0
SIF TEQUIP:上半身服あり && (!TEQUIP:手差し込み可 && !TEQUIP:はだけ可)
	RETURN 0
SIF TEQUIP:上タイツあり && !TEQUIP:上タイツ破れ
	RETURN 0
SIF TEQUIP:上半身下着あり
	RETURN 0
RETURN 1


