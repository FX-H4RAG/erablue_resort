@MODE詳細設定補正_アナルバイブ(キャラ番号, 補正先種類)
#DIM キャラ番号
#DIMS 補正先種類
VARSET LOCAL

SELECTCASE 補正先種類
	CASE "快Ａ"
		IF ABL:キャラ番号:Ａ感覚 >= アナルバイブ強さ:キャラ番号:0
			LOCAL += 10 * アナルバイブ強さ:キャラ番号:0
		ENDIF
		RETURN LOCAL
ENDSELECT


@MODE_持続快楽_アナルバイブ(実行キャラ番号, 対象キャラ番号)
#DIM 実行キャラ番号
#DIM 対象キャラ番号

RCVAR:対象キャラ番号:道具コマンドフラグ = 1
CALL MODE詳細設定補正_アナルバイブ(対象キャラ番号, "快Ａ")
CALL SOURCE_CALC_快Ａ(対象キャラ番号, -1, 70 + RESULT)

RETURN 1


@MODETYPE_アナルバイブ(部位番号, 処理モード, プレイヤー番号, ターゲット番号)
#DIM 部位番号
#DIM プレイヤー番号
#DIM ターゲット番号
#DIMS 処理モード

IF 処理モード == "写真用文字列_プレイヤー"
	;ここは来ないはず
	RETURN 部位状況_写真用
ELSEIF 処理モード == "写真用文字列_ターゲット"
	;モード固有の「～～をする」の文章を入れ込む
	SIF アナルバイブ強さ:ターゲット番号:0 > 2
		詳細文文字列受け渡し変数 = 激しく動く
	詳細文文字列受け渡し変数 += "アナルバイブを咥え込んだ"
	;下の部位専有判定と別の値を返す
	RETURN 部位状況_写真用
ENDIF

;0=ペニス 1=クリ 2=指（手） 3=口 4=胸 5=膣 6=アナル
;アイテムのためプレイヤー側は一切場所を専有しない
SELECTCASE 部位番号
	CASE 部位_アナル
		SIF 処理モード == "ターゲット"
			RETURN 部位状況_占有
ENDSELECT


@MODE_絶頂相手_アナルバイブ(絶頂部位, 処理モード, 判定結果)
#FUNCTION
#DIM 絶頂部位
#DIMS 処理モード
#DIM REF 判定結果

IF 処理モード == "ターゲット"
	IF 絶頂部位 == 部位_Ａ
		判定結果 = 絶頂相手_モード相手
		RETURNF 絶頂相手_モード相手
	ENDIF
ENDIF


