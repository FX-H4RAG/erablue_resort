@MODE_持続快楽_アナルビーズ(実行キャラ番号, 対象キャラ番号)
#DIM 実行キャラ番号
#DIM 対象キャラ番号

RCVAR:対象キャラ番号:道具コマンドフラグ = 1
CALL SOURCE_CALC_快Ａ(対象キャラ番号, -1, 30)

RETURN 1

@MODETYPE_アナルビーズ(部位番号, 処理モード, プレイヤー番号, ターゲット番号)
#DIM 部位番号
#DIM プレイヤー番号
#DIM ターゲット番号
#DIMS 処理モード

IF 処理モード == "写真用文字列_プレイヤー"
	;ここは来ないはず
	RETURN 9
ELSEIF 処理モード == "写真用文字列_ターゲット"
	;モード固有の「～～をする」の文章を入れ込む
	詳細文文字列受け渡し変数 += "アナルビーズを咥え込んだ"
	;下の部位専有判定と別にするため9を返す
	RETURN 9
ENDIF

;0=ペニス 1=クリ 2=指（手） 3=口 4=胸 5=膣 6=アナル
;アイテムのためプレイヤー側は一切場所を専有しない
SELECTCASE 部位番号
	CASE 6
		SIF 処理モード == "ターゲット"
			RETURN 1
ENDSELECT

