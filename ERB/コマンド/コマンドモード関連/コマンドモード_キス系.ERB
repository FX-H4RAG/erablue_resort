@MODETYPE_キス(部位番号, 処理モード, プレイヤー番号, ターゲット番号)
#DIM 部位番号
#DIM プレイヤー番号
#DIM ターゲット番号
#DIMS 処理モード

IF 処理モード == "写真用文字列_プレイヤー"
	;モード固有の「～～をする」の文章を入れ込む
	;人妻
	IF TALENT:ターゲット番号:恋人持ち == 2
		詳細文文字列受け渡し変数 = 夫を裏切って%CALLNAME:ターゲット番号%%TEXTR("と唇を重ね合わせた/と背徳のキスをする/に唇を捧げた")%
	;恋人あり
	ELSEIF TALENT:ターゲット番号:恋人持ち == 1
		詳細文文字列受け渡し変数 = 恋人を裏切って%CALLNAME:ターゲット番号%%TEXTR("と唇を重ね合わせた/と背徳のキスをする/に唇を捧げた")%

	ELSE
		詳細文文字列受け渡し変数 = %CALLNAME:ターゲット番号%%TEXTR("と唇を重ね合わせた/とキスをする/に唇を捧げた")%
	ENDIF
	;下の部位専有判定と別の値を返す
	RETURN 部位状況_写真用
ELSEIF 処理モード == "写真用文字列_ターゲット"
	;モード固有の「～～をする」の文章を入れ込む
	詳細文文字列受け渡し変数 = %CALLNAME:プレイヤー番号%と%TEXTR("唇を重ね合わせた/キスをする")%
	;下の部位専有判定と別の値を返す
	RETURN 部位状況_写真用
ENDIF

;0=ペニス 1=クリ 2=指（手） 3=口 4=胸 5=膣 6=アナル
;キスは両者口のみ専有
IF 部位番号 == 部位_口
	RETURN 部位状況_占有
ENDIF

