@系統リスト_キス系(モード名)
#FUNCTION
#DIMS モード名
IF GROUPMATCH(モード名, "キス", "ディープキス")
	モード確認結果 = 1
ENDIF


@MODE_持続快楽_キス系(キャラ番号)
#DIM キャラ番号
#DIM 主犯

IF MODE_確認("キス系", キャラ番号)
	主犯 = MODE_主犯確認("キス系", キャラ番号)
	CALL SOURCE_CALC_快Ｓ(キャラ番号, 主犯, 50)
	CALL SOURCE_CALC_接触(キャラ番号, 主犯, 50)
	EXP:主犯:Ｓ経験 ++
	EXP:主犯:キス経験 ++
	EXP:キャラ番号:Ｓ経験 ++
	EXP:キャラ番号:キス経験 ++
	SIF 主犯 == MASTER
		CALL SOURCE_CALC_好感度要素_恋心度UP(キャラ番号, 主犯, 10)
	RETURN 1
ENDIF

