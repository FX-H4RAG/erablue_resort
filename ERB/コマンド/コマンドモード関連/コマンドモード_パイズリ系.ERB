@系統リスト_パイズリ系(モード名)
#FUNCTION
#DIMS モード名
IF GROUPMATCH(モード名, "パイズリ", "パイズリフェラ")
	モード確認結果 = 1
ENDIF

@MODE_持続快楽_パイズリ系(キャラ番号)
#DIM キャラ番号
#DIM 主犯

IF MODE_確認("パイズリ系", キャラ番号)
	主犯 = MODE_主犯確認("パイズリ系", キャラ番号)
	CALL SOURCE_CALC_快Ｃ(主犯, キャラ番号, 100)
	CALL SOURCE_CALC_快Ｂ(キャラ番号, 主犯, 50)
	CALL SOURCE_CALC_接触(キャラ番号, 主犯, 80)
	CALL SOURCE_CALC_奉仕(キャラ番号, 主犯, 100)
	EXP:キャラ番号:Ｂ経験 ++
	EXP:キャラ番号:口淫経験 ++
	;奉仕快楽
	TCVAR:キャラ番号:奉仕コマンドフラグ = 1
	RETURN 1
ENDIF

@MODETYPE_パイズリ(ARG, ARGS)
;0=ペニス 1=クリ 2=指（手） 3=口 4=胸 5=膣 6=アナル
;キスは両者口のみ専有
SELECTCASE ARG
	CASE 0
		SIF ARGS == "プレイヤー"
			RETURN 1
		SIF ARGS == "ターゲット"
			RETURN 2
	CASE 1
		SIF ARGS == "ターゲット"
			RETURN 1
	CASE 2
		SIF ARGS == "ターゲット"
			RETURN 1
	CASE 3
		;プレイヤー側がハーヴィンでターゲットが非ハーヴィンなら届く
		IF TALENT:PLAYER:種族 == 4 && TALENT:TARGET:種族 != 4
		ELSE
			RETURN 2
		ENDIF
	CASE 4
		SIF ARGS == "ターゲット"
			RETURN 1
	CASE 5
		;ターゲットの膣には届かない
		SIF ARGS == "ターゲット"
			RETURN 2
	CASE 6
		;ターゲットの尻には届かない
		RETURN 2
ENDSELECT

