@MODETYPE_パイズリ(部位番号, 処理モード, プレイヤー番号, ターゲット番号)
#DIM 部位番号
#DIM プレイヤー番号
#DIM ターゲット番号
#DIMS 処理モード

IF 処理モード == "写真用文字列_プレイヤー"
	;モード固有の「～～をする」の文章を入れ込む
	詳細文文字列受け渡し変数 = %CALLNAME:ターゲット番号%のペニスを乳で挟み、上下させる
	;下の部位専有判定と別にするため9を返す
	RETURN 9
ELSEIF 処理モード == "写真用文字列_ターゲット"
	;モード固有の「～～をする」の文章を入れ込む
	詳細文文字列受け渡し変数 = %CALLNAME:プレイヤー番号%の乳でペニスを挟まれた
	;下の部位専有判定と別にするため9を返す
	RETURN 9
ENDIF

;0=ペニス 1=クリ 2=指（手） 3=口 4=胸 5=膣 6=アナル
;キスは両者口のみ専有
SELECTCASE 部位番号
	CASE 0
		SIF 処理モード == "ターゲット"
			RETURN 1
		SIF 処理モード == "プレイヤー"
			RETURN 2
	CASE 1
		SIF 処理モード == "プレイヤー"
			RETURN 1
	CASE 2
		SIF 処理モード == "プレイヤー"
			RETURN 1
	CASE 3
		;ターゲット側がハーヴィンでプレイヤーが非ハーヴィンなら届く
		IF TALENT:ターゲット番号:種族 == 4 && TALENT:プレイヤー番号:種族 != 4
		ELSE
			RETURN 2
		ENDIF
	CASE 4
		SIF 処理モード == "プレイヤー"
			RETURN 1
	CASE 5
		;プレイヤーの膣には届かない
		SIF 処理モード == "プレイヤー"
			RETURN 2
	CASE 6
		;尻には届かない
		RETURN 2
ENDSELECT

