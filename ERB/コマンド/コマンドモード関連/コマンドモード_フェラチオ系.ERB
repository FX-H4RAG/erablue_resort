@MODETYPE_フェラチオ(部位番号, 処理モード, プレイヤー番号, ターゲット番号)
#DIM 部位番号
#DIM プレイヤー番号
#DIM ターゲット番号
#DIMS 処理モード

詳細文文字列受け渡し変数 = 
IF 処理モード == "写真用文字列_プレイヤー"
	;人妻の場合
	SIF TALENT:ターゲット番号:恋人持ち == 2
		詳細文文字列受け渡し変数 = 夫を裏切って
	;恋人あり
	SIF TALENT:ターゲット番号:恋人持ち == 1
		詳細文文字列受け渡し変数 = 恋人を裏切って
	;モード固有の「～～をする」の文章を入れ込む
	詳細文文字列受け渡し変数 += @"%CALLNAME:ターゲット番号%の%TEXTR("チンポ/おちんぽ/ペニス")%%TEXTR("を口淫する/に舌を這わせる/を舐めしゃぶる/に恭しくキスを捧げる/に唇を捧げて奉仕する/を唇で愛撫する/を舌で愛撫する/にチンキスご奉仕する")%"
	;下の部位専有判定と別の値を返す
	RETURN 部位状況_写真用
ELSEIF 処理モード == "写真用文字列_ターゲット"
	;モード固有の「～～をする」の文章を入れ込む
	SELECTCASE RAND:3
	CASE 0
		詳細文文字列受け渡し変数 = %TEXTR("チンポ/ペニス")%を%CALLNAME:プレイヤー番号%に%TEXTR("口淫されている/舐めしゃぶられている/唇と舌で愛撫されている/口唇愛撫されている")%
	CASE 1
		詳細文文字列受け渡し変数 = %CALLNAME:プレイヤー番号%の%TEXTR("唇/キス")%を%TEXTR("チンポ/おちんぽ/ペニス")%に捧げられている
	CASE 2
		詳細文文字列受け渡し変数 = %TEXTR("チンポ/ペニス")%に%CALLNAME:プレイヤー番号%の%TEXTR("口唇奉仕/フェラチオ奉仕/おしゃぶり奉仕")%を%TEXTR("捧げられ/受け")%ている
	ENDSELECT
	;下の部位専有判定と別の値を返す
	RETURN 部位状況_写真用
ENDIF

;0=ペニス 1=クリ 2=指（手） 3=口 4=胸 5=膣 6=アナル
SELECTCASE 部位番号
	CASE 部位_ペニス
		SIF 処理モード == "ターゲット"
			RETURN 部位状況_占有
		SIF 処理モード == "プレイヤー"
			RETURN 部位状況_届かない
	CASE 部位_クリトリス
		SIF 処理モード == "プレイヤー"
			RETURN 部位状況_届かない
	CASE 部位_口
		SIF 処理モード == "プレイヤー"
			RETURN 部位状況_占有
		SIF 処理モード == "ターゲット"
			RETURN 部位状況_届かない
	CASE 部位_胸
		;プレイヤーの胸には届かない
		SIF 処理モード == "プレイヤー"
			RETURN 部位状況_届かない
	CASE 部位_膣
		;プレイヤーの膣には届かない
		SIF 処理モード == "プレイヤー"
			RETURN 部位状況_届かない
	CASE 部位_アナル
		;プレイヤーの尻には届かない
		SIF 処理モード == "プレイヤー"
			RETURN 部位状況_届かない
ENDSELECT

@MODETYPE_パイズリフェラ(部位番号, 処理モード, プレイヤー番号, ターゲット番号)
#DIM 部位番号
#DIM プレイヤー番号
#DIM ターゲット番号
#DIMS 処理モード
詳細文文字列受け渡し変数 = 
IF 処理モード == "写真用文字列_プレイヤー"
	;人妻の場合
	SIF TALENT:ターゲット番号:恋人持ち == 2
		詳細文文字列受け渡し変数 = 夫を裏切って
	;恋人あり
	SIF TALENT:ターゲット番号:恋人持ち == 1
		詳細文文字列受け渡し変数 = 恋人を裏切って
	
	;モード固有の「～～をする」の文章を入れ込む
	詳細文文字列受け渡し変数 += @"%CALLNAME:ターゲット番号%の%TEXTR("チンポ/おちんぽ/ペニス")%を"
	
		IF TALENT:ターゲット番号:バストサイズ == 3
		;魔乳
			詳細文文字列受け渡し変数 += @"ずっしりと重い魔乳で挟み"
		ELSEIF TALENT:ターゲット番号:バストサイズ == 2
		;爆乳
			詳細文文字列受け渡し変数 += @"たわわに実った爆乳で挟み"
		ELSEIF TALENT:ターゲット番号:バストサイズ == 1
		;巨乳
			詳細文文字列受け渡し変数 += @"豊満に育った巨乳で挟み"
		ELSEIF TALENT:ターゲット番号:バストサイズ == 0
		;普乳
			詳細文文字列受け渡し変数 += @"柔らかな%TEXTR("おっぱい/美乳")%で挟み"
		ELSEIF TALENT:ターゲット番号:バストサイズ == -1
		;貧乳
			詳細文文字列受け渡し変数 += @"つんとハリのある%TEXTR("ちっぱい/微乳")%で%TEXTR("もてなし/刺激し")%"
		ELSEIF TALENT:ターゲット番号:バストサイズ == -2
		;絶壁
			詳細文文字列受け渡し変数 += @"ささやかな微乳で%TEXTR("もてなし/刺激し")%"
		ENDIF
	詳細文文字列受け渡し変数 += @"、亀頭%TEXTR("をしゃぶって愛撫する/を咥えしゃぶる/を舌先で愛撫する/にくちづける")%"
	;下の部位専有判定と別の値を返す
	RETURN 部位状況_写真用
ELSEIF 処理モード == "写真用文字列_ターゲット"
	;モード固有の「～～をする」の文章を入れ込む
	SELECTCASE RAND:3
	CASE 0
		詳細文文字列受け渡し変数 = %TEXTR("チンポ/ペニス")%を%CALLNAME:プレイヤー番号%にパイズリされている
	CASE 1
		詳細文文字列受け渡し変数 = %CALLNAME:プレイヤー番号%の%TEXTR("胸/おっぱい")%と%TEXTR("唇/おくち")%で%TEXTR("チンポ/おちんぽ/ペニス")%を愛撫されている
	CASE 2
		詳細文文字列受け渡し変数 = %CALLNAME:プレイヤー番号%の%TEXTR("胸/おっぱい")%と%TEXTR("唇/おくち")%に%TEXTR("チンポ/おちんぽ/ペニス")%奉仕を受けている
	ENDSELECT
	;下の部位専有判定と別の値を返す
	RETURN 部位状況_写真用
ENDIF

