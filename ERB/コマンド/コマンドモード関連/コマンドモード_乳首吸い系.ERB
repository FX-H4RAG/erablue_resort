@系統リスト_乳首吸い系(モード名)
#FUNCTION
#DIMS モード名
IF GROUPMATCH(モード名, "乳首吸い", "授乳手コキ", "助手乳首吸い")
	モード確認結果 = 1
	RETURNF 1
ENDIF

@MODE_持続快楽_乳首吸い系(キャラ番号)
#DIM キャラ番号
#DIM 主犯

IF MODE_確認("乳首吸い系", キャラ番号)
	主犯 = MODE_主犯確認("乳首吸い系", キャラ番号)
	CALL SOURCE_CALC_快Ｂ(キャラ番号, 主犯, 150)
	CALL SOURCE_CALC_接触(キャラ番号, 主犯, 80)
	EXP:キャラ番号:Ｂ経験 ++
	EXP:主犯:口淫経験 ++
	RCVAR:キャラ番号:乳首開発フラグ = 2
	IF MODE_確認("授乳手コキ", キャラ番号)
		主犯 = MODE_主犯確認("授乳手コキ", キャラ番号)
		CALL SOURCE_CALC_奉仕(キャラ番号, 主犯, 200)
		EXP:キャラ番号:手淫経験 ++
		;奉仕快楽
		RCVAR:キャラ番号:奉仕コマンドフラグ = 1
	ENDIF
	RETURN 1
ENDIF


@MODETYPE_乳首吸い(ARG, ARGS)
;0=ペニス 1=クリ 2=指（手） 3=口 4=胸 5=膣 6=アナル
;挿入で使用するのはペニスと膣で1を返す
SELECTCASE ARG
	CASE 3
		SIF ARGS == "プレイヤー"
			RETURN 1
		SIF ARGS == "ターゲット"
			RETURN 2
	CASE 4
		SIF ARGS == "ターゲット"
			RETURN 1
ENDSELECT


