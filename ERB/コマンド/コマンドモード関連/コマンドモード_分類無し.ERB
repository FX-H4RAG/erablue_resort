@MODETYPE_足コキ(部位番号, 処理モード, プレイヤー番号, ターゲット番号)
#DIM 部位番号
#DIM プレイヤー番号
#DIM ターゲット番号
#DIMS 処理モード

IF 処理モード == "写真用文字列_プレイヤー"
	;モード固有の「～～をする」の文章を入れ込む
	IF ABL:プレイヤー番号:サド性感 > 2
		詳細文文字列受け渡し変数 = %CALLNAME:ターゲット番号%の%TEXTR("ペニス/チンポ")%を%TEXTR("両足で挟んで扱く/足指で弄りまわす/足で踏みつける")%
	ELSE
		詳細文文字列受け渡し変数 = %CALLNAME:ターゲット番号%の%TEXTR("ペニス/チンポ")%を両足で挟んで扱く
	ENDIF
	;下の部位専有判定と別の値を返す
	RETURN 部位状況_写真用
ELSEIF 処理モード == "写真用文字列_ターゲット"
	;モード固有の「～～をする」の文章を入れ込む
	SELECTCASE (ABL:プレイヤー番号:サド性感 > 2) ? RAND:3 # 0
	CASE 0
		詳細文文字列受け渡し変数 = %CALLNAME:プレイヤー番号%の両足で%TEXTR("ペニス/チンポ/おちんぽ")%を扱かれている
	CASE 1
		詳細文文字列受け渡し変数 = %CALLNAME:プレイヤー番号%の足指で%TEXTR("ペニス/チンポ/おちんぽ")%を弄りまわされている
	CASE 2
		詳細文文字列受け渡し変数 = %CALLNAME:プレイヤー番号%の足に%TEXTR("ペニス/チンポ/おちんぽ")%を踏みつけられている
	ENDSELECT
	;下の部位専有判定と別の値を返す
	RETURN 部位状況_写真用
ENDIF

;0=ペニス 1=クリ 2=指（手） 3=口 4=胸 5=膣 6=アナル
IF 処理モード == "ターゲット" && 部位番号 == 部位_ペニス
	;ターゲットのペニスを占有
	RETURN 部位状況_占有
ELSE
	;他は全て届かない
	RETURN 部位状況_届かない
ENDIF


