
@MODETYPE_シックスナイン(ARG, ARGS)
;0=ペニス 1=クリ 2=指（手） 3=口 4=胸 5=膣 6=アナル
;キスは両者口のみ専有
SELECTCASE ARG
	CASE 0
		SIF ARGS == "プレイヤー"
			RETURN 1
	CASE 1
		SIF ARGS == "ターゲット"
			RETURN 1
	CASE 3
		RETURN 1
	CASE 4
		RETURN 2
ENDSELECT

@MODE_持続快楽_シックスナイン(キャラ番号)
#DIM キャラ番号
#DIM 主犯

IF MODE_確認("シックスナイン", キャラ番号)
	主犯 = MODE_主犯確認("シックスナイン", キャラ番号)
	CALL SOURCE_CALC_快Ｃ(主犯, キャラ番号, 200)
	CALL SOURCE_CALC_快Ｃ(キャラ番号, 主犯, 200)
	CALL SOURCE_CALC_接触(キャラ番号, 主犯, 80)
	CALL SOURCE_CALC_奉仕(キャラ番号, 主犯, 100)
	EXP:キャラ番号:Ｃ経験 ++
	EXP:キャラ番号:口淫経験 ++
	EXP:主犯:Ｃ経験 ++
	EXP:主犯:口淫経験 ++
	;奉仕快楽
	TCVAR:キャラ番号:奉仕コマンドフラグ = 1
	RETURN 1
ENDIF

