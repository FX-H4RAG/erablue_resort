@系統リスト_手コキ系(モード名)
#FUNCTION
#DIMS モード名
IF GROUPMATCH(モード名, "手コキ", "授乳手コキ")
	モード確認結果 = 1
	RETURNF 1
ENDIF

@MODE_持続快楽_手コキ系(キャラ番号)
#DIM キャラ番号
#DIM 主犯

IF MODE_確認("手コキ系", キャラ番号)
	主犯 = MODE_主犯確認("手コキ系", キャラ番号)
	CALL SOURCE_CALC_快Ｃ(主犯, キャラ番号, 100)
	CALL SOURCE_CALC_接触(キャラ番号, 主犯, 80)
	CALL SOURCE_CALC_奉仕(キャラ番号, 主犯, 100)
	EXP:キャラ番号:手淫経験 ++
	;奉仕快楽
	TCVAR:キャラ番号:奉仕コマンドフラグ = 1
	IF MODE_確認("授乳手コキ", キャラ番号)
		主犯 = MODE_主犯確認("授乳手コキ", キャラ番号)
		CALL SOURCE_CALC_快Ｂ(キャラ番号, 主犯, 150)
		CALL SOURCE_CALC_接触(キャラ番号, 主犯, 40)
		CALL SOURCE_CALC_奉仕(キャラ番号, 主犯, 100)
		EXP:キャラ番号:Ｂ経験 ++
		TCVAR:キャラ番号:乳首開発フラグ = 2
	ENDIF
	RETURN 1
ENDIF

@MODETYPE_手コキ(ARG, ARGS)
;0=ペニス 1=クリ 2=指（手） 3=口 4=胸 5=膣 6=アナル
SELECTCASE ARG
	CASE 0
		SIF ARGS == "プレイヤー"
			RETURN 1
	CASE 2
		SIF ARGS == "ターゲット"
			RETURN 1
ENDSELECT

@MODETYPE_授乳手コキ(ARG, ARGS)
;0=ペニス 1=クリ 2=指（手） 3=口 4=胸 5=膣 6=アナル
;キスは両者口のみ専有
SELECTCASE ARG
	CASE 0
		SIF ARGS == "プレイヤー"
			RETURN 1
	CASE 1
		SIF ARGS == "ターゲット"
			RETURN 2
	CASE 2
		SIF ARGS == "ターゲット"
			RETURN 1
	CASE 3
		SIF ARGS == "プレイヤー"
			RETURN 1
		SIF ARGS == "ターゲット"
			RETURN 2
	CASE 4
		SIF ARGS == "ターゲット"
			RETURN 1
	CASE 5
		SIF ARGS == "ターゲット"
			RETURN 2
	CASE 6
		SIF ARGS == "ターゲット"
			RETURN 2
ENDSELECT
