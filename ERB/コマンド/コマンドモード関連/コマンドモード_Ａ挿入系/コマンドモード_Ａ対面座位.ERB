
@MODE_持続快楽_Ａ対面座位(実行キャラ番号, 対象キャラ番号)
#DIM 実行キャラ番号
#DIM 対象キャラ番号
CALL MODE_持続快楽_Ａ挿入系(実行キャラ番号, 対象キャラ番号, 110, 190)

@MODETYPE_Ａ対面座位(部位番号, 処理モード, プレイヤー番号, ターゲット番号)
#DIM 部位番号
#DIM プレイヤー番号
#DIM ターゲット番号
#DIMS 処理モード

IF 処理モード == "写真用文字列_プレイヤー"
	;モード固有の「～～をする」の文章を入れ込む
	詳細文文字列受け渡し変数 = %CALLNAME:ターゲット番号%と向かい合い、アナルにペニスを突き入れる
	;下の部位専有判定と別にするため9を返す
	RETURN 9
ELSEIF 処理モード == "写真用文字列_ターゲット"
	;モード固有の「～～をする」の文章を入れ込む
	IF 陥落チェック(ターゲット番号) == 0 && BASE:ターゲット番号:酩酊 > 300
		;未陥落の泥酔姦。ヤってる最中にも酩酊は下がり続けるので、泥酔の500からちょい下げて300までで
		;むしろ未陥落でもないと別に酔ってコトに及んだ情報残してもシコくなさそうなので未陥落のみ
		詳細文文字列受け渡し変数 = %TEXTR("酔った勢いで/酔いに浮かされて/泥酔して")%、%TEXTR("正面から抱きすくめられて/対面座位で")%%CALLNAME:プレイヤー番号%の%TEXTR("ペニス/チンポ")%に 
		詳細文文字列受け渡し変数 += @"%TEXTR("アナル/お尻/尻穴/ケツ穴")%を%TEXTR("性器として使われてしまっている/犯されている/ズボスボされている/楽しまれてしまっている/コキ捨て穴にされてしまっている/ほじくられている")%"
	ELSE
		詳細文文字列受け渡し変数 = %TEXTR("正面から抱きあって/対面座位で")%、%CALLNAME:プレイヤー番号%
		詳細文文字列受け渡し変数 += @"の%TEXTR("ペニス/チンポ")%を%TEXTR("アナル/お尻/尻穴")%に%TEXTR("に咥え込んだ/突き入れられた")%"
	ENDIF
	;下の部位専有判定と別にするため9を返す
	RETURN 9
ENDIF

;0=ペニス 1=クリ 2=指（手） 3=口 4=胸 5=膣 6=アナル
;挿入で使用するのはペニスと膣で1を返す
SELECTCASE 部位番号
	CASE 0
		SIF 処理モード == "プレイヤー"
			RETURN 1
	CASE 3
		;両方ハーヴィンだと口は届く
		SIF TALENT:プレイヤー番号:種族 == 4 && TALENT:ターゲット番号:種族 == 4
			RETURN 0
		;どっちかがハーヴィンだと口は届かない
		SIF TALENT:プレイヤー番号:種族 == 4 || TALENT:ターゲット番号:種族 == 4
			RETURN 2
	CASE 5
		SIF 処理モード == "プレイヤー"
			RETURN 2
	CASE 6
		SIF 処理モード == "ターゲット"
			RETURN 1
		SIF 処理モード == "プレイヤー"
			RETURN 2
ENDSELECT

