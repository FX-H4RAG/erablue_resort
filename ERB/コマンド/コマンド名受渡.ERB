
@TRAIN_COMNAME(ARG)
#FUNCTIONS

SIF ARG < 0
	RETURNF

TSTR:コマンド名受渡 = 
TSTR:コマンドカラー受渡 = 
SELECTCASE SAVESTR:ゲームフェイズ管理
	CASE "むりやりうふふモード"
		TRYCALLFORMF RAPE_COMNAME{ARG}
		VARSET RESULTS
		SPLIT TSTR:コマンド名受渡, "_", RESULTS
		TSTR:コマンド名受渡 = 
		FOR LOCAL, 0, RESULT
			IF RESULTS:LOCAL == "H"
				TSTR:コマンド名受渡 += "<img src='えっちハート'>"
			ELSE
				TSTR:コマンド名受渡 += @"%RESULTS:LOCAL%"
			ENDIF
		NEXT
	CASE "マッサージモード"
		TRYCALLFORMF MASSAGE_COMNAME{ARG}
		VARSET RESULTS
		SPLIT TSTR:コマンド名受渡, "_", RESULTS
		TSTR:コマンド名受渡 = 
		FOR LOCAL, 0, RESULT
			IF RESULTS:LOCAL == "H"
				TSTR:コマンド名受渡 += "<img src='えっちハート'>"
			ELSE
				TSTR:コマンド名受渡 += @"%RESULTS:LOCAL%"
			ENDIF
		NEXT
	CASE "通常モード"
		TRYCALLFORMF COMNAME{ARG}
ENDSELECT

RETURNF TSTR:コマンド名受渡


