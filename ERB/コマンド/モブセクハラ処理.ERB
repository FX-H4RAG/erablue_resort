@モブセクハラ処理
#DIM セクハラ部位
#DIM セクハラ快楽量
セクハラ快楽量 = 0

;セクハラ発生率は1/3
IF フィールド展開:欲情フィールド && RAND:3 == 0
	SELECTCASE RAND:2
		CASE 0
			;愛撫セクハラパターン
			;部位決定
			セクハラ部位 = RANDOM_PART(PLAYER)
			SIF セクハラ部位 == -1
				RETURN 0

			;快楽量決定、基本値から諸々補正
			セクハラ快楽量 = RAND:500 + 30

			SELECTCASE セクハラ部位
				CASE 0
					CALL SOURCE_CALC_快Ｃ(PLAYER, -1, セクハラ快楽量)
				CASE 1
					CALL SOURCE_CALC_快Ｖ(PLAYER, -1, セクハラ快楽量)
				CASE 2
					CALL SOURCE_CALC_快Ａ(PLAYER, -1, セクハラ快楽量)
				CASE 3
					CALL SOURCE_CALC_快Ｂ(PLAYER, -1, セクハラ快楽量)
			ENDSELECT

			;口上用に数値受け渡し
			RFLAG:コマンド結果受渡し変数 = セクハラ部位
			RFLAG:コマンド結果受渡し変数２ = セクハラ快楽量
		CASE 1
			;その他セクハラパターン
			セクハラ部位 = RAND:3 + 10
			セクハラ快楽量 = RAND:100 + 30

			SELECTCASE セクハラ部位
				CASE 10
					;キス
					CALL SOURCE_CALC_快Ｓ(PLAYER, -1, セクハラ快楽量)
				CASE 11
					;ハグ
					CALL SOURCE_CALC_歓楽(PLAYER, -1, セクハラ快楽量)
				CASE 12
					;淫語
					CALL SOURCE_CALC_露出(PLAYER, -1, セクハラ快楽量)
			ENDSELECT

			;口上用に数値受け渡し
			RFLAG:コマンド結果受渡し変数 = セクハラ部位
			RFLAG:コマンド結果受渡し変数２ = セクハラ快楽量
	ENDSELECT
ENDIF

RETURN 0

