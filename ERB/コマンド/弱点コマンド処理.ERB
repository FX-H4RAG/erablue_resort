@弱点チェック(対象キャラ, 弱点キー)
#FUNCTION
#DIM 対象キャラ
#DIMS 弱点キー

IF MATCH(弱点コマンド枠:対象キャラ:0, 弱点キー)
	RETURNF 1
ELSE
	IF MATCH(追加弱点コマンド枠:対象キャラ:0, 弱点キー)
		RETURNF 1
	ELSE
		RETURNF 0
	ENDIF
ENDIF

@弱点番号算出(対象キャラ, 弱点キー)
#FUNCTION
#DIM 対象キャラ
#DIMS 弱点キー
#DIM 弱点番号

弱点番号 = FINDELEMENT(弱点コマンド枠:対象キャラ:0, 弱点キー, , , 1)

RETURNF 弱点番号

@追加弱点番号算出(対象キャラ, 弱点キー)
#FUNCTION
#DIM 対象キャラ
#DIMS 弱点キー
#DIM 弱点番号

弱点番号 = FINDELEMENT(追加弱点コマンド枠:対象キャラ:0, 弱点キー, , , 1)

RETURNF 弱点番号


@判明済み弱点チェック(対象キャラ, 弱点キー)
#FUNCTION
#DIM 対象キャラ
#DIMS 弱点キー
#DIM 弱点番号

弱点番号 = FINDELEMENT(弱点コマンド枠:対象キャラ:0, 弱点キー, , , 1)

IF 弱点番号 >= 0
	IF 弱点看破:TARGET:弱点番号
		RETURNF 1
	ELSE
		RETURNF 0
	ENDIF
ELSE
	弱点番号 = FINDELEMENT(追加弱点コマンド枠:対象キャラ:0, 弱点キー, , , 1)
	IF 弱点番号 >= 0
		RETURNF 1
	ELSE
		RETURNF 0
	ENDIF
ENDIF

@弱点全看破チェック(対象キャラ)
#FUNCTION
#DIM 対象キャラ
#DIM 弱点番号
#DIM 残り数
#DIM 弱点総数

残り数 = 0
弱点総数 = FINDLASTELEMENT(弱点コマンド枠:対象キャラ:0, ".")
FOR 弱点番号, 0, 弱点総数 + 1
	SIF 弱点看破:対象キャラ:弱点番号 == 0
		残り数 ++
NEXT

IF 残り数
	RETURNF 0
ELSE
	RETURNF 1
ENDIF