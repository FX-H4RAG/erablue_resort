@サイド描画表示種類_同室者(表示文字列, 追加表示文字列)
#DIMS REF 表示文字列
#DIMS REF 追加表示文字列
#DIMS ボタン文字列

VARSET LOCAL
ボタン文字列 '= ""
LOCAL:3 = ((1600 / GETCONFIG("フォントサイズ")) - 55 ) / 8
IF LOCAL:3 && (GET_TARGETNUM() == 1 || 二人目画像表示用())
	;対象が一人、または３P時はなるべく大きく短冊を表示
	VARSET LOCALS
	;ターゲット
	CALL サイド領域_エロステータス把握(TARGET:LOCAL)
	LOCALS '= RESULTS
	LOCALS:1 '= RESULTS:1
	表示文字列 += @"<button value='{TARGET + 2000}' title='%CALLNAME:TARGET + LOCALS%'>%短冊グラ表示用文字列関数(TARGET, 1, MIN(800 * LOCAL:3 / 2, 2000))%</button>　"
	ボタン文字列 += @"<button value='{TARGET + 2000}' title='%CALLNAME:TARGET + LOCALS%'><font face='' %LOCALS:1%>%"[" + CALLNAME:TARGET + "]" + LOCALS, MIN(16 * LOCAL:3 / 2, 40), LEFT%</font></button>"
	IF 二人目画像表示用() && LOCAL:3 > 1
		;助手
		LOCAL = 二人目画像表示用()
		CALL サイド領域_エロステータス把握(LOCAL)
		LOCALS '= RESULTS
		LOCALS:1 '= RESULTS:1
		表示文字列 += @"<button value='{LOCAL + 2000}' title='%CALLNAME:LOCAL + LOCALS%'>%短冊グラ表示用文字列関数(LOCAL, 2, MIN(800 * LOCAL:3 / 2, 2000))%</button>"
		ボタン文字列 += @"<button value='{LOCAL + 2000}' title='%CALLNAME:LOCAL + LOCALS%'><font face='' %LOCALS:1%>%"[" + CALLNAME:LOCAL + "]" + LOCALS, 16, LEFT%</font></button>"
	ENDIF
	表示文字列 += @"%"<br>" * (1 + MIN(8 * LOCAL:3, 40) * GETCONFIG("フォントサイズ") / GETCONFIG("一行の高さ"))%%ボタン文字列%<br>"
ELSE
	表示文字列 += "<br>"
	FOR LOCAL, 1, CHARANUM
		;表示可能人数が0なら表示終了
		SIF LOCAL:3 < 1
			BREAK
		IF TARGET:LOCAL == TARGET
		ELSEIF TARGET:LOCAL > 0 && LOCAL:2 < 4
			VARSET LOCALS
			CALL サイド領域_エロステータス把握(TARGET:LOCAL)
			LOCALS '= RESULTS
			LOCALS:1 '= RESULTS:1
			表示文字列 += @"<button value='{TARGET:LOCAL + 2000}' title='%CALLNAME:(TARGET:LOCAL) + LOCALS%'>%顔グラ表示用文字列関数(TARGET:LOCAL, 1+LOCAL:1, LOCAL:1 / LOCAL:3, 800)%</button>"
			ボタン文字列 += @"<button value='{TARGET:LOCAL + 2000}' title='%CALLNAME:(TARGET:LOCAL) + LOCALS%'><font face='' %LOCALS:1%>%"[" + CALLNAME:(TARGET:LOCAL) + "]", 16, LEFT%</font></button>"
			LOCAL:1 ++
			IF LOCAL:1 / LOCAL:3 > LOCAL:2
				表示文字列 += @"%"<br>" * 8%%ボタン文字列%<br>"
				ボタン文字列 '= ""
				LOCAL:2 ++
			ENDIF
		ELSE
			IF ボタン文字列 != ""
				表示文字列 += @"%"<br>" * 8%%ボタン文字列%<br>"
				ボタン文字列 '= ""
			ENDIF
			BREAK
		ENDIF
	NEXT
ENDIF


