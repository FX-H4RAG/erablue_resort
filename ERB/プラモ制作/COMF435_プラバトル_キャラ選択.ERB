

@COMNAME435_キャラ選択

VARSET LOCAL
VARSET プラバ_レーサー番号
LOCAL:11  = 146,27,28,86,26, 154,59,7,45,132
LOCAL:21 = 10001,10002,10003,10021,10022, 10041,10051,10101,10201,10202

;1はプレイヤーのため2から検索
LOCAL = 2
$LOOP
	RESULT = LOCAL:(11 + RAND:20)
	LOCAL:10 = RESULT
	;データが存在するか確認
	TRYCALLFORM レース_キャラ{RESULT}
	;0になってない場合はレーサーデータが存在しないのでランダム抽選する
	;基本的にキャラクター名は存在するので
	IF RESULT != 0
		プラモデータ文字列:1 = %CALLNAME:RESULT%
		LOCAL:1 = RAND:10 + 1
		IF LOCAL:1 == 1
			プラモデータ文字列:2 = セイバー６００
		ELSEIF LOCAL:1 == 2
			プラモデータ文字列:2 = 金田のバイク
		ELSEIF LOCAL:1 == 3
			プラモデータ文字列:2 = ボルゾイアディーン
		ELSEIF LOCAL:1 == 4
			プラモデータ文字列:2 = スーパーアスチュートJr.
		ELSEIF LOCAL:1 == 5
			プラモデータ文字列:2 = マンタレイJr.
		ELSEIF LOCAL:1 == 6
			プラモデータ文字列:2 = スーパーアスラーダ01
		ELSEIF LOCAL:1 == 7
			プラモデータ文字列:2 = エクスカイザー
		ELSEIF LOCAL:1 == 8
			プラモデータ文字列:2 = レオ・サークル
		ELSEIF LOCAL:1 == 9
			プラモデータ文字列:2 = スパイラルフロー
		ELSE
			プラモデータ文字列:2 = Ｄホイール「%CALLNAME:RESULT%号」
		
		ENDIF
		プラモデータ変数:1 = プラモ愛機スピード:1 * 90 / 100 + RAND:200
		プラモデータ変数:2 = プラモ愛機スタミナ:1 * 90 / 100 + RAND:200
		プラモデータ変数:3 = プラモ愛機パワー:1 * 90 / 100 + RAND:200
		プラモデータ変数:4 = プラモ愛機ガッツ:1 * 90 / 100 + RAND:200
		プラモデータ変数:5 = プラモ愛機テクニック:1 * 90 / 100 + RAND:200
	ENDIF
;	PRINTFORMW {LOCAL:10}

	プラバ_レーサー番号:LOCAL = LOCAL:10
	;同一キャラが存在する場合再抽選
	IF プラバ_レーサー番号:LOCAL == プラバ_レーサー番号:2 && LOCAL != 2
		GOTO LOOP
	ELSEIF プラバ_レーサー番号:LOCAL == プラバ_レーサー番号:3 && LOCAL != 3
		GOTO LOOP
	ELSEIF プラバ_レーサー番号:LOCAL == プラバ_レーサー番号:4 && LOCAL != 4
		GOTO LOOP
	ELSEIF プラバ_レーサー番号:LOCAL == プラバ_レーサー番号:5 && LOCAL != 5
		GOTO LOOP
	ELSEIF プラバ_レーサー番号:LOCAL == プラバ_レーサー番号:6 && LOCAL != 6
		GOTO LOOP
	ELSEIF プラバ_レーサー番号:LOCAL == プラバ_レーサー番号:7 && LOCAL != 7
		GOTO LOOP
	ELSEIF プラバ_レーサー番号:LOCAL == プラバ_レーサー番号:8 && LOCAL != 8
		GOTO LOOP
	ENDIF
	プラバ_ユーザー名:LOCAL = %プラモデータ文字列:1%
	プラバ_機体名:LOCAL = %プラモデータ文字列:2%
	プラバ_スピード:LOCAL = プラモデータ変数:1
	プラバ_スタミナ:LOCAL = プラモデータ変数:2
	プラバ_パワー:LOCAL = プラモデータ変数:3
	プラバ_ガッツ:LOCAL = プラモデータ変数:4
	プラバ_テクニック:LOCAL = プラモデータ変数:5
	
	
LOCAL ++ 
;PRINTFORML %プラバ_ユーザー名:2% %プラバ_ユーザー名:3% %プラバ_ユーザー名:4% %プラバ_ユーザー名:5% %プラバ_ユーザー名:6% %プラバ_ユーザー名:7%
IF LOCAL <= 8
	GOTO LOOP
ENDIF

