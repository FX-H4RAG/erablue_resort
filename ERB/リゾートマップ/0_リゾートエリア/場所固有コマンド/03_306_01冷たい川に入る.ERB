@COMNAME_PLACE_380_0_306
#FUNCTION

IF 施設改造度:3:0 == 0
	TSTR:コマンド名受渡 = 
	RETURNF 0
ENDIF
TSTR:コマンド名受渡 = 冷たい川に入る
RETURNF 1

;===================================================
;コマンドタイプ
;===================================================
@COMTYPE_380_0_306
#FUNCTION
TFLAG:コマンドタイプ受渡 = COMTYPE("単独可能")
		
@COM380_3_306
;サウナ内は熱気で時間制限があるため、それを冷ますための行動

;隠密解除
CFLAG:PLAYER:隠密 = 0


DOWNBASE:MASTER:気力 += 30
DOWNBASE:MASTER:体力 += 30

TIME += 熱気ゲージ / 5
熱気ゲージ = 0

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE380_0_306
;条件に合う場合0（不許可）を返す
;どの条件にも引っかからないなら1（許可）を返す
;一括管理
SIF GLOBAL_COMABLE(380)
	RETURN RESULT
;睡眠中
SIF CFLAG:睡眠
	RETURN 0
;気力0
SIF BASE:MASTER:気力 <= 0
	RETURN 0
;熱気ゲージが溜まってない
SIF 熱気ゲージ <= 20
	RETURN 0
RETURN 1

;-------------------------------------------------
;実行時メッセージ
;-------------------------------------------------
@MESSAGE_COM380_0_306

PRINTFORML %CALLNAME:PLAYER%は冷たい川で体の火照りを冷ました。


