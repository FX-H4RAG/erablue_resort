#DIM 部屋主配列, 10
#DIM ループ用

部屋検索_マップ種別 = 999
IF TALENT:対象キャラ:定住者 == 1
	;定住者は基本居住区エリア
	部屋検索_マップ種別 = 2
	;家の算出
	FOR LOCAL, 0, 50
		SIF 定住者部屋割り配列:LOCAL == ""
			CONTINUE
		;部屋の居住者を配列化
		VARSET 部屋主配列
		VARSET RESULTS
		SPLIT 定住者部屋割り配列:LOCAL, "_", RESULTS
		FOR ループ用, 0, RESULT
			SIF RESULTS:ループ用 == ""
				BREAK
			IF 対象キャラ == TOINT(RESULTS:ループ用)
				RETURNF LOCAL + 1000
			ENDIF
		NEXT
	NEXT
ELSEIF TALENT:対象キャラ:定住者 == 2
	;同棲はリゾートエリア
	部屋検索_マップ種別 = 0
	;家の算出
	FOR LOCAL, 0, 10
		IF 同棲部屋割り配列:LOCAL == 対象キャラ
			RETURNF LOCAL + 2011
		ENDIF
	NEXT
ELSEIF TALENT:対象キャラ:従業員
	FOR LOCAL, 0, 従業員部屋数
		IF 従業員部屋割り配列:LOCAL == 対象キャラ
			RETURNF LOCAL + 1000
		ENDIF
	NEXT
ELSEIF CFLAG:対象キャラ:スイートルーム滞在フラグ
	RETURNF CFLAG:対象キャラ:スイートルーム滞在フラグ - 100 + 2000
ELSE
	FOR LOCAL, 0, 100
		IF 滞在者部屋割り配列:LOCAL == 対象キャラ
			RETURNF LOCAL
		ENDIF
	NEXT
ENDIF

;部屋がない場合のフォロー
IF CFLAG:対象キャラ:滞在期間 > 0
	IF TALENT:対象キャラ:従業員
		FOR LOCAL, 0, 従業員部屋数
			IF 従業員部屋割り配列:(LOCAL) < 1
				従業員部屋割り配列:(LOCAL) = 対象キャラ
				RETURNF LOCAL + 1000
			ENDIF
		NEXT
	ELSE
		FOR LOCAL, 0, 滞在キャラ上限
			IF 滞在者部屋割り配列:LOCAL < 1
				滞在者部屋割り配列:LOCAL = 対象キャラ
				RETURNF LOCAL
			ENDIF
		NEXT
	ENDIF
ENDIF

RETURNF -1

