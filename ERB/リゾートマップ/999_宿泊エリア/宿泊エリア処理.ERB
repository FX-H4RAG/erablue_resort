@宿泊エリア処理
#DIM 表示エリア種類
#DIM ページ数
#DIM ループ用
#DIM 部屋主配列, 10

IF 宿泊エリア表示種別
	表示エリア種類 = 500
ELSE
	表示エリア種類 = 200
ENDIF

$RESTART_LABEL
VARSET LOCAL
VARSET LOCALS
	
DRAWLINE
PRINTL 移動先を選んでください。
DRAWLINE
LOCALS = <div rect='81,31,1231,2812' border='31' bcolor='#C0C0C0'></div>
LOCALS += "<div rect='156,156,1187,2812'>"
SELECTCASE 表示エリア種類
	CASE 200
		LOCALS += "<nonbutton><font color='#FFFF00'>[200] 宿泊者エリア</font></nonbutton>"
		LOCALS += "<br>"
		LOCALS += "<button value='300'>[300] 従業員個室</button>"
		LOCALS += "<br>"
		LOCALS += "<button value='400'>[400] スイートルーム</button>"
		LOCALS += "<br>"
	CASE 300
		LOCALS += "<button value='200'>[200] 宿泊者エリア</button>"
		LOCALS += "<br>"
		LOCALS += "<nonbutton><font color='#FFFF00'>[300] 従業員個室</font></nonbutton>"
		LOCALS += "<br>"
		LOCALS += "<button value='400'>[400] スイートルーム</button>"
		LOCALS += "<br>"
	CASE 400
		LOCALS += "<button value='200'>[200] 宿泊者エリア</button>"
		LOCALS += "<br>"
		LOCALS += "<button value='300'>[300] 従業員個室</button>"
		LOCALS += "<br>"
		LOCALS += "<nonbutton><font color='#FFFF00'>[400] スイートルーム</font></nonbutton>"
		LOCALS += "<br>"
	CASE 500
		LOCALS += "<nonbutton><font color='#FFFF00'>[500] 住宅街</font></nonbutton>"
		LOCALS += "<br>"
ENDSELECT
LOCALS += "<br>"
IF 宿泊エリア表示種別
	LOCALS += "<button value='999'>[999] 居住区に戻る</button>"
ELSE
	LOCALS += "<button value='999'>[999] 自室に戻る</button>"
ENDIF
LOCALS += "<br>"
LOCALS += "</div>"

SELECTCASE 表示エリア種類
	CASE 200
		CALL 宿泊エリア_客室_表示(ページ数)
	CASE 300
		CALL 宿泊エリア_従業員室_表示(ページ数)
	CASE 400
		CALL 宿泊エリア_スイートルーム_表示(ページ数)
	CASE 500
		CALL 居住区エリア_住宅街_表示(ページ数)
ENDSELECT
;RESULTにページ数上限が入っている
LOCAL:10 = RESULT

HTML_PRINT LOCALS, 1

FOR LOCAL, 0, 27
	PRINTL
NEXT
$INPUT_LOOP
BINPUT

SELECTCASE RESULT
	CASE IS < 滞在キャラ上限
		IF 表示エリア種類 == 200
			IF CFLAG:(滞在者部屋割り配列:RESULT):現在マップ種別 == 999 && CFLAG:(滞在者部屋割り配列:RESULT):睡眠 && CFLAG:(滞在者部屋割り配列:RESULT):現在位置 == RESULT && 陥落チェック(滞在者部屋割り配列:RESULT) == 0
				PRINTL 部屋には鍵が掛かっている。
				PRINTW どうやら眠っているようだ…
				GOTO RESTART_LABEL
			ENDIF
			CFLAG:PLAYER:現在マップ種別 = 999
			CFLAG:MASTER:現在位置 = RESULT
			CALL 移動時モード消去
			FOR LOCAL,1,CHARANUM
				IF CFLAG:LOCAL:同行 || MODE_確認_完全一致("ハーヴィンオナホ系", PLAYER, LOCAL) > -1
					CFLAG:LOCAL:現在位置 = CFLAG:MASTER:現在位置
					CFLAG:LOCAL:現在マップ種別 = CFLAG:MASTER:現在マップ種別
				ENDIF
			NEXT
		ELSEIF 表示エリア種類 == 300
			IF CFLAG:(従業員部屋割り配列:RESULT):現在マップ種別 == 999 && CFLAG:(従業員部屋割り配列:RESULT):睡眠 && CFLAG:(従業員部屋割り配列:RESULT):現在位置 == RESULT + 1000 && 陥落チェック(従業員部屋割り配列:RESULT) == 0
				PRINTL 部屋には鍵が掛かっている。
				PRINTW どうやら眠っているようだ…
				GOTO RESTART_LABEL
			ENDIF
			CFLAG:PLAYER:現在マップ種別 = 999
			CFLAG:MASTER:現在位置 = RESULT + 1000
			CALL 移動時モード消去
			FOR LOCAL,1,CHARANUM
				IF CFLAG:LOCAL:同行 || MODE_確認_完全一致("ハーヴィンオナホ系", PLAYER, LOCAL) > -1
					CFLAG:LOCAL:現在位置 = CFLAG:MASTER:現在位置
					CFLAG:LOCAL:現在マップ種別 = CFLAG:MASTER:現在マップ種別
				ENDIF
			NEXT
		ELSEIF 表示エリア種類 == 400
			LOCAL:2 = 0
			FOR ループ用,0,CHARANUM
				SIF CFLAG:ループ用:滞在期間 < 1
					CONTINUE
				IF CFLAG:ループ用:現在マップ種別 == 999 && CFLAG:ループ用:現在位置 == RESULT + 2000
					SIF CFLAG:ループ用:睡眠 && 陥落チェック(ループ用) == 0
						LOCAL:2 = 1
				ENDIF
			NEXT
			IF LOCAL:2
				PRINTL 部屋には鍵が掛かっている。
				PRINTW どうやら眠っているようだ…
				GOTO RESTART_LABEL
			ENDIF
			CFLAG:PLAYER:現在マップ種別 = 999
			CFLAG:MASTER:現在位置 = RESULT + 2000
			CALL 移動時モード消去
			FOR LOCAL,1,CHARANUM
				IF CFLAG:LOCAL:同行 || MODE_確認_完全一致("ハーヴィンオナホ系", PLAYER, LOCAL) > -1
					CFLAG:LOCAL:現在位置 = CFLAG:MASTER:現在位置
					CFLAG:LOCAL:現在マップ種別 = CFLAG:MASTER:現在マップ種別
				ENDIF
			NEXT
		ELSEIF 表示エリア種類 == 500
			LOCAL = RESULT
			;部屋の居住者を配列化
			VARSET 部屋主配列
			VARSET RESULTS
			SPLIT 定住者部屋割り配列:LOCAL, "_", RESULTS
			FOR ループ用, 0, RESULT
				SIF RESULTS:ループ用 == ""
					BREAK
				部屋主配列:ループ用 = TOINT(RESULTS:ループ用)
			NEXT
			IF 部屋主配列:0 > 0
				;睡眠時
				LOCAL:2 = 0
				FOR ループ用, 0, 10
					SIF 部屋主配列:ループ用 < 1
						BREAK
					IF CFLAG:(部屋主配列:ループ用):現在マップ種別 == 2 && CFLAG:(部屋主配列:ループ用):現在位置 == LOCAL + 1000
						SIF CFLAG:(部屋主配列:ループ用):睡眠 && 陥落チェック(部屋主配列:ループ用) == 0
							LOCAL:2 = 1
					ENDIF
				NEXT
				IF LOCAL:2
					PRINTL 家には鍵が掛かっている。
					PRINTW どうやら眠っているようだ…
					GOTO RESTART_LABEL
				ENDIF
				;全員外出時
				LOCAL:2 = 0
				FOR ループ用, 0, 10
					SIF 部屋主配列:ループ用 < 1
						BREAK
					IF CFLAG:(部屋主配列:ループ用):現在マップ種別 == 2 && CFLAG:(部屋主配列:ループ用):現在位置 == LOCAL + 1000
						LOCAL:2 = 1
					ELSEIF CFLAG:(部屋主配列:ループ用):同行 > 0 || MODE_確認_完全一致("ハーヴィンオナホ系", PLAYER, 部屋主配列:ループ用) > -1
						LOCAL:2 = 1
					ENDIF
				NEXT
				IF LOCAL:2 == 0
					PRINTL 家には鍵が掛かっている。
					PRINTW どうやら家に誰もいないようだ…
					GOTO RESTART_LABEL
				ENDIF
			ENDIF
			CFLAG:PLAYER:現在マップ種別 = 2
			CFLAG:MASTER:現在位置 = LOCAL + 1000
			CALL 移動時モード消去
			FOR LOCAL,1,CHARANUM
				IF CFLAG:LOCAL:同行 || MODE_確認_完全一致("ハーヴィンオナホ系", PLAYER, LOCAL) > -1
					CFLAG:LOCAL:現在位置 = CFLAG:MASTER:現在位置
					CFLAG:LOCAL:現在マップ種別 = CFLAG:MASTER:現在マップ種別
				ENDIF
			NEXT
		ENDIF
	CASE 200
		IF 表示エリア種類 == 200
			REUSELASTLINE 
			GOTO INPUT_LOOP
		ENDIF
		表示エリア種類 = 200
		ページ数 = 0
		GOTO RESTART_LABEL
	CASE 300
		IF 表示エリア種類 == 300
			REUSELASTLINE 
			GOTO INPUT_LOOP
		ENDIF
		表示エリア種類 = 300
		ページ数 = 0
		GOTO RESTART_LABEL
	CASE 400
		IF 表示エリア種類 == 400
			REUSELASTLINE 
			GOTO INPUT_LOOP
		ENDIF
		表示エリア種類 = 400
		ページ数 = 0
		GOTO RESTART_LABEL
	CASE 1000
		IF ページ数 < 1
			REUSELASTLINE 
			GOTO INPUT_LOOP
		ENDIF
		ページ数 -= 1
		GOTO RESTART_LABEL
	CASE 1001
		IF ページ数 >= LOCAL:10
			REUSELASTLINE 
			GOTO INPUT_LOOP
		ENDIF
		ページ数 += 1
		GOTO RESTART_LABEL
	CASE 999
		IF 宿泊エリア表示種別
			CFLAG:PLAYER:現在マップ種別 = 宿泊エリア表示種別
			CFLAG:MASTER:現在位置 = 1
		ELSE
			CFLAG:PLAYER:現在マップ種別 = 0
			CFLAG:MASTER:現在位置 = 20
		ENDIF
		CALL 移動時モード消去
ENDSELECT

