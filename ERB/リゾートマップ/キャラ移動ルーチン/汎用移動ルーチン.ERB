;------------------------------------------------------------------------------
;汎用ルーチン 番号１：プールで遊ぶ
;------------------------------------------------------------------------------
@MOVE_ROUTINE_1(キャラ番号, ARGS)
#DIM キャラ番号
#DIM 時間計算

SELECTCASE ARGS
	CASE "起床時間"
		時間計算 = 480 - (TALENT:キャラ番号:早起き * 30)
		RETURN 時間計算
	
	CASE "就寝時間"
		時間計算 = 1320 - (TALENT:キャラ番号:早寝 * 60)
		RETURN 時間計算
	
	CASE "初期位置"
		CFLAG:キャラ番号:現在位置 = 6
		CFLAG:キャラ番号:現在マップ種別 = 0
	
	CASE "移動処理"
		;まず現在ルーチン通りの場所にいるかどうかを判定
		IF CFLAG:キャラ番号:現在位置 == ROUTINE_PLAN_1(キャラ番号)
			;いるなら処理無し
		ELSE
			;いないならルーチン通りの場所へ向けて移動
			IF ROUTINE_PLAN_1(キャラ番号) == 999
				CALL 自室移動処理(キャラ番号)
			ELSE
				CALLFORM SKIP_MOVE_0(ROUTINE_PLAN_1(キャラ番号), キャラ番号)
				CALL 汎用移動処理(キャラ番号)
			ENDIF
			RETURN 1
		ENDIF
ENDSELECT

