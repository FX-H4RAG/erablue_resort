;---------------------------------------------------------------
;キャラの居場所再設定
;---------------------------------------------------------------
@派生マップ番号取得(マップ番号, 現在地番号)
#FUNCTION
#DIM マップ番号
#DIM 現在地番号

SELECTCASE マップ番号
	CASE 0
		;リゾートマップ
		SELECTCASE 現在地番号
			CASE 1 TO 20
				RETURNF 0
			CASE 302 TO 308
				RETURNF 3
			CASE 502 TO 506
				RETURNF 5
			CASE 701 TO 711
				RETURNF 7
			CASE 801 TO 811
				RETURNF 8
			CASE 1503 TO 1515
				RETURNF 15
		ENDSELECT
ENDSELECT

@マップ遷移判定処理(マップ番号, 現在地番号)
#DIM マップ番号
#DIM 現在地番号

SELECTCASE マップ番号
	CASE 0
		;基本→キャンプ
		IF 現在地番号 == 3 && 施設改造度:3:0
			RETURN 303
		ENDIF
		;基本→遊戯
		IF 現在地番号 == 5 && 施設改造度:5:0
			RETURN 503
		ENDIF
		;基本→男湯
		IF 現在地番号 == 7 && 施設改造度:7:0
			RETURN 702
		ENDIF
		;基本→女湯
		IF 現在地番号 == 8 && 施設改造度:8:0
			RETURN 802
		ENDIF
		;基本→プール
		IF 現在地番号 == 15 && 施設改造度:15:0
			RETURN 1503
		ENDIF
		;キャンプ→基本
		IF 現在地番号 == 302
			RETURN 2
		ENDIF
		;遊戯→基本
		IF 現在地番号 == 502
			RETURN 2
		ENDIF
		;男湯→基本
		IF 現在地番号 == 701
			RETURN 6
		ENDIF
		;男湯→女湯
		IF 現在地番号 == 709
			RETURN 810
		ENDIF
		;女湯→基本
		IF 現在地番号 == 801
			RETURN 6
		ENDIF
		;女湯→男湯
		IF 現在地番号 == 809
			RETURN 710
		ENDIF
		;プール→基本
		IF 現在地番号 == 1513
			RETURN 13
		ENDIF
		IF 現在地番号 == 1514
			RETURN 14
		ENDIF
ENDSELECT

RETURN 0

