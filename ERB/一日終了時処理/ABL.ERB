@SHOW_JUEL

@SHOW_ABLUP_SELECT
#DIM キャラ番号ループ
#DIM ABL番号格納

DRAWLINE
FOR キャラ番号ループ,0,CHARANUM
	FOR LOCAL:11,0,30
		SELECTCASE LOCAL:11
			;多くの要素が必要な能力から上げてゆく
			;露出癖
			CASE 0
				ABL番号格納= 10
			;奉仕精神
			CASE 1
				ABL番号格納= 11
			;マゾ性感
			CASE 2
				ABL番号格納= 12
			;サド性感
			CASE 3
				ABL番号格納= 13
			CASE 4
				CONTINUE
			;玩具嗜好
			CASE 5
				ABL番号格納= 15
			;技巧
			CASE 6
				ABL番号格納= 20
			;欲望
			CASE 7
				ABL番号格納= 5
			;Ｓ感覚
			CASE 8
				ABL番号格納= 4
			;Ｂ感覚
			CASE 9
				ABL番号格納= 3
			;Ａ感覚
			CASE 10
				ABL番号格納= 2
			;Ｖ感覚
			CASE 11
				ABL番号格納= 1
			;Ｃ感覚
			CASE 12
				ABL番号格納= 0
			CASEELSE
				CONTINUE
		ENDSELECT
		FOR LOCAL,0,4
			LOCAL:3 = 0
			LOCAL:4 = 0
			SIF JUEL_DEMAND(ABL番号格納,LOCAL,0,キャラ番号ループ) == -2
				BREAK
			SIF JUEL_DEMAND(ABL番号格納,LOCAL,0,キャラ番号ループ) < 0
				CONTINUE
			;必要な宝珠を探す
			FOR LOCAL:1,0,100
				IF JUEL_DEMAND(ABL番号格納,LOCAL,LOCAL:1,キャラ番号ループ) > 0
					IF JUEL:(キャラ番号ループ):(LOCAL:1) < JUEL_DEMAND(ABL番号格納,LOCAL,LOCAL:1,キャラ番号ループ)
						LOCAL:3 ++
						BREAK
					ENDIF
				ENDIF
			NEXT
			SIF LOCAL:3
				CONTINUE
			;必要な経験を探す
			FOR LOCAL:1,0,100
				IF EXP_DEMAND(ABL番号格納,LOCAL,LOCAL:1,キャラ番号ループ) > 0
					IF  EXP:(キャラ番号ループ):(LOCAL:1) < EXP_DEMAND(ABL番号格納,LOCAL,LOCAL:1,キャラ番号ループ)
						LOCAL:4 ++
						BREAK
					ENDIF
				ENDIF
			NEXT
			SIF LOCAL:4
				CONTINUE
			FOR LOCAL:1,0,40
				JUEL:(キャラ番号ループ):(LOCAL:1) -= JUEL_DEMAND(ABL番号格納,LOCAL,LOCAL:1,キャラ番号ループ)
			NEXT
			ABL:(キャラ番号ループ):(ABL番号格納) += 1
			PRINTFORML %ABLNAME:(ABL番号格納)%LVUP (%CALLNAME:(キャラ番号ループ)%)
			BREAK
		NEXT
	NEXT
NEXT
PRINT [100] - 確認


