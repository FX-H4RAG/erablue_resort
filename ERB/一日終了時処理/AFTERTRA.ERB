;────────────────────────────────────
;調教終了の処理
;────────────────────────────────────
@EVENTEND0
#DIM 長期雇用者保存配列, 200
#DIM ループ用
#DIM 長期雇用者人数
#DIM 雑務ゲージ減少量
#DIM 売上分ルピ
#DIM 秘書担当キャラ保存, 50
#DIM 人気度変動一時保存
VARSET LOCAL
VARSET 長期雇用者保存配列
長期雇用者人数 = 0
PRINTL 一日が終わりました
探索フラグ = 0
SIF STRLENS(TSTR:1)
	CALL SELL_VIDEO

;睡眠フラグ
CFLAG:MASTER:睡眠 = 1

;何の珠を得られたか
FOR LOCAL,1,CHARANUM
	;発情期、凡そ１０日に１回（滞在してなくてもカウント）
	IF 発情期判定(LOCAL)
		IF 発情期切り替えOPTION記憶
			SIF CFLAG:LOCAL:発情期フラグ < 0
				CFLAG:LOCAL:発情期フラグ = RAND:9 + 1
		ELSE
			CFLAG:LOCAL:発情期フラグ -= 1
		ENDIF
		SIF CFLAG:LOCAL:発情期フラグ == -4 - TALENT:LOCAL:性欲
			CFLAG:LOCAL:発情期フラグ = 9 - TALENT:LOCAL:性欲
	ENDIF
	;ドラフorドラフまぜまぜは発情期に母乳体質化＆発情期でなくなったら母乳を止める
	IF 素質切り替えOPTION記憶:母乳体質_発情期_なし == 0
		IF (TALENT:LOCAL:種族 == 3 || LOCAL == 11) && TALENT:LOCAL:母乳体質 != 3
			IF CFLAG:LOCAL:発情期フラグ < 0
				SIF TALENT:LOCAL:母乳体質 == 0
					TALENT:LOCAL:母乳体質 = 2
			ELSE
				SIF TALENT:LOCAL:母乳体質 == 2
					TALENT:LOCAL:母乳体質 = 0
			ENDIF
		ENDIF
	ENDIF
	;滞在してないキャラはスルー
	SIF CFLAG:LOCAL:滞在期間 < 0
		CONTINUE
	CALL JUEL_CHECK(LOCAL)
	CALL DENIAL_CHECK(LOCAL)
	IF 性癖素質:LOCAL:性癖開発用フラグ変数
		;性癖開発チャレンジ
		;チャレンジ時はオナニー判定が出ない
		TRYCALLFORM 性癖開拓チャレンジ処理_{性癖素質:LOCAL:性癖開発用フラグ変数}(LOCAL)
		性癖素質:LOCAL:性癖開発用フラグ変数 = 0
	ELSE
		;一日終了時自慰判定
		CALL 一日終了時オナニー判定(LOCAL)
		SIF RESULT
			TRYCALLFORM KOJO_一日終了時オナニー_{LOCAL}
	ENDIF
	;ついでに長期雇用者数カウント
	IF CFLAG:LOCAL:長期雇用
		長期雇用者保存配列:(長期雇用者人数) = LOCAL
		長期雇用者人数 += 1
	ENDIF
NEXT
;妊娠判定
FOR LOCAL,1,CHARANUM
	CALL PREGNANCY_CHECK(LOCAL)
	CALL PREGNANCY_COUNTUP(LOCAL)
NEXT
;--------------------------------------------------------------------------------
;従業員の仕事処理
VARSET LOCALS
雑務ゲージ減少量 = 0
売上分ルピ = 0
FOR LOCAL, 0, CHARANUM
	IF (TALENT:LOCAL:従業員 || LOCAL == PLAYER) && 現在仕事:LOCAL:0 == 1
		雑務ゲージ減少量 += (仕事レベル:LOCAL:1 + 1) * (仕事レベル:LOCAL:1 + 1) * 100
		;経験値取得とレベル上昇
		仕事経験値:LOCAL:1 += 1
		IF 仕事経験値:LOCAL:1 >= 仕事レベル経験値テーブル:(仕事レベル:LOCAL:1 + 1)
			仕事レベル:LOCAL:1 += 1
			LOCALS:1 += @"%CALLNAME:LOCAL%の雑務レベルがLv{仕事レベル:LOCAL:1}に上昇した！<br>"
		ENDIF
	ENDIF
	IF (TALENT:LOCAL:従業員 || LOCAL == PLAYER) && 現在仕事:LOCAL:0 == 2
		売上分ルピ += (仕事レベル:LOCAL:2 + 1) * (仕事レベル:LOCAL:2 + 1) * (仕事レベル:LOCAL:2 + 1) * 滞在キャラ数算出関数()
		;経験値取得とレベル上昇
		仕事経験値:LOCAL:2 += 1
		IF 仕事経験値:LOCAL:2 >= 仕事レベル経験値テーブル:(仕事レベル:LOCAL:2 + 1)
			仕事レベル:LOCAL:2 += 1
			LOCALS:2 += @"%CALLNAME:LOCAL%の販売レベルがLv{仕事レベル:LOCAL:2}に上昇した！<br>"
		ENDIF
	ENDIF
	IF TALENT:LOCAL:従業員 && 現在仕事:LOCAL:0 == 3
		秘書担当キャラ保存:(LOCAL:1) = LOCAL
		NOWEX:LOCAL:信頼度上昇格納 += (仕事レベル:LOCAL:3 + 1) * (仕事レベル:LOCAL:3 + 1) * 200
		;経験値取得とレベル上昇
		仕事経験値:LOCAL:3 += 1
		IF 仕事経験値:LOCAL:3 >= 仕事レベル経験値テーブル:(仕事レベル:LOCAL:3 + 1)
			仕事レベル:LOCAL:3 += 1
			LOCALS:3 += @"%CALLNAME:LOCAL%の秘書レベルがLv{仕事レベル:LOCAL:3}に上昇した！<br>"
		ENDIF
		LOCAL:1 += 1
	ENDIF
NEXT

FOR LOCAL, 1, 2100
	IF LOCAL < 100 || 施設改造度:(LOCAL / 100):0
		雑務ゲージ:LOCAL = MAX(雑務ゲージ:LOCAL - 雑務ゲージ減少量, 0)
	ENDIF
	SIF LOCAL > 20
		LOCAL += 79
NEXT

MONEY += 売上分ルピ

DRAWLINE
IF 仕事人数表示用:雑務担当人数 > 0
	PRINTFORMW {仕事人数表示用:雑務担当人数}名の従業員の働きにより、各場所の雑務ゲージが{雑務ゲージ減少量}減少しました。
	IF LOCALS:1 != ""
		HTML_PRINT LOCALS:1
		WAIT
	ENDIF
	DRAWLINE
ENDIF
IF 仕事人数表示用:雑務担当人数 > 0
	PRINTFORMW {仕事人数表示用:販売担当人数}名の従業員の働きにより、{売上分ルピ}ルピの利益が上がりました。
	IF LOCALS:2 != ""
		HTML_PRINT LOCALS:2
		WAIT
	ENDIF
	DRAWLINE
ENDIF
IF 仕事人数表示用:秘書担当人数 > 0
	PRINTFORMW {仕事人数表示用:販売担当人数}名の従業員は、秘書業務を通じて%CALLNAME:PLAYER%への信頼を高めました。
	FOR LOCAL, 0, 仕事人数表示用:販売担当人数
		CALL FAVOR_CALC(秘書担当キャラ保存:LOCAL)
		NOWEX:(秘書担当キャラ保存:LOCAL):信頼度上昇格納 = 0
	NEXT
	WAIT
	IF LOCALS:2 != ""
		HTML_PRINT LOCALS:2
		WAIT
	ENDIF
	DRAWLINE
ENDIF
;--------------------------------------------------------------------------------

IF 滞在キャラ数算出関数() > 0
	PRINTFORML {滞在キャラ数算出関数()}人の観光客により、以下の利益を得た。
	LOCAL = 滞在キャラ数算出関数() * 300 * RAND(95,106) * RAND(95, 106) / 10000
	MONEY += LOCAL
	PRINTFORML ルピ利益：{LOCAL}
	LOCAL = 滞在キャラ数算出関数() * 5 * RAND(95,106) * RAND(95, 106) / 10000
	ZP小数点以下所持量 += LOCAL
	PRINTFORML 発生ＺＰ：{LOCAL / 1000}.{(LOCAL % 1000) / 100}{(LOCAL % 100) / 10}{(LOCAL % 10)}
	IF ZP小数点以下所持量 > 999
		FLAG:ZP所持量 += ZP小数点以下所持量 / 1000
		ZP小数点以下所持量 = ZP小数点以下所持量 % 1000
	ENDIF
	
	LOCAL = 0
	FOR LOCAL:2, 3, 9
		TRYCALLFORM 空挺港店舗効果_{空挺港店舗状況:(LOCAL:2):0}("一日終了時のルピ収入")
		LOCAL += RESULT
	NEXT
	IF LOCAL
		PRINTFORML 施設の効果により、以下の利益を得た。
		PRINTFORML ルピ利益：{LOCAL}
		MONEY += LOCAL
		DRAWLINE
	ENDIF
	LOCAL = 0
	FOR LOCAL:2, 3, 9
		TRYCALLFORM 空挺港店舗効果_{空挺港店舗状況:(LOCAL:2):0}("一日終了時のZP発生")
		LOCAL += RESULT
	NEXT
	IF LOCAL
		PRINTFORML 施設の効果により、以下のZPを得た。
		PRINTFORML 発生ＺＰ：{LOCAL / 1000}.{(LOCAL % 1000) / 100}{(LOCAL % 100) / 10}{(LOCAL % 10)}
		MONEY += LOCAL
		DRAWLINE
	ENDIF
	DRAWLINE
	IF 長期雇用者人数 > 0
		PRINTFORML {長期雇用者人数}人の長期雇用により、以下のルピを消費した。
		FOR ループ用, 0, 長期雇用者人数
			SIF 長期雇用者保存配列:ループ用 > 0
				PRINTFORML %CALLNAME:(長期雇用者保存配列:ループ用)%雇用費：1000ルピ
		NEXT
		MONEY -= 長期雇用者人数 * 1000
		DRAWLINE
	ENDIF
	IF 従業員人数 > 0
		PRINTFORML {従業員人数}人の従業員により、以下のルピを消費した。
		FOR ループ用, 0, 20
			SIF 従業員部屋割り配列:ループ用 > 0
				PRINTFORML %CALLNAME:(従業員部屋割り配列:ループ用)%雇用費：2000ルピ
		NEXT
		MONEY -= 従業員人数 * 2000
		DRAWLINE
	ENDIF
ENDIF

;--------------------------------------------------------------------------------
;リゾート人気度変動
;--------------------------------------------------------------------------------
LOCALS:1 = 
LOCALS:2 = <br>
人気度変動一時保存 = 0
IF モブ観光客数 > 0
	LOCALS:1 +=  "■本日のリゾート人気度変動<br>"
	IF 人気度別施設充足度() > 0
		LOCALS:1 += "モブ観光客「遊ぶ場所が十分あって楽しい！」<br>"
		LOCALS:2 += "人気度UP！<br>"
		人気度変動一時保存 += 人気度別施設充足度() * 1000
	ELSEIF 人気度別施設充足度() < 0
		LOCALS:1 += "モブ観光客「遊ぶ場所が足りないよ……」<br>"
		LOCALS:2 += @"人気度DOWN…<br>"
		人気度変動一時保存 -= 人気度別施設充足度() * 500
	ENDIF
	VARSET LOCAL
	;雑務ゲージ平均値算出
	FOR LOCAL, 1, 2100
		SIF LOCAL == 20
			CONTINUE
		IF 存在しない移動先(0, LOCAL) == 0
			LOCAL:1 += 雑務ゲージ:LOCAL
			LOCAL:2 += 1
		ENDIF
		SIF (LOCAL % 100) > 20
			LOCAL += 79
	NEXT
	LOCAL:1 = LOCAL:1 / LOCAL:2
	IF LOCAL:1 < 500
		LOCALS:1 += "モブ観光客「雑務の対応が早くて快適だね」<br>"
		LOCALS:2 += "人気度UP！<br>"
		人気度変動一時保存 += 2000
	ELSEIF LOCAL:1 < 2000
	ELSEIF LOCAL:1 < 4000
		LOCALS:1 += "モブ観光客「ちょっと雑務が溜まってるかな」<br>"
		LOCALS:2 += @"人気度DOWN…<br>"
		人気度変動一時保存 -= 500
	ELSEIF LOCAL:1 < 6000
		LOCALS:1 += "モブ観光客「雑務が遅いのが気になるかも」<br>"
		LOCALS:2 += @"人気度DOWN…<br>"
		人気度変動一時保存 -= 1500
	ELSEIF LOCAL:1 < 8000
		LOCALS:1 += "モブ観光客「雑務、溜まりすぎじゃない？」<br>"
		LOCALS:2 += @"人気度DOWN…<br>"
		人気度変動一時保存 -= 3000
	ELSE
		LOCALS:1 += "モブ観光客「雑務が何も対応されてない！」<br>"
		LOCALS:2 += @"人気度DOWN…<br>"
		人気度変動一時保存 -= 5000
	ENDIF

	LOCALS = <div width='720px' height='{STRCOUNT(LOCALS:1, "<br>") * 18 + 70}px' border='5px' bcolor='#C0C0C0'></div><div rect='15px, 15px, 620px, {STRCOUNT(LOCALS:1, "<br>") * 18}px'>%LOCALS:1%</div><div rect='600px, 15px, 90px, {STRCOUNT(LOCALS:1, "<br>") * 18}px'>%LOCALS:2%</div>
	LOCALS += @"<div rect='15px, {STRCOUNT(LOCALS:1, "<br>") * 18 + 20}px, 720px, 40px'>--------------------------------------------------------------------------------------<br>"
	SKIPDISP 1
	CALL 人気上昇処理(人気度変動一時保存)
	SKIPDISP 0
	DEBUGPRINTFORML 雑務ゲージ平均：{LOCAL:1}
	DEBUGPRINTFORML 人気度変動一時保存：{人気度変動一時保存}
	LOCALS += @"リゾート人気度　　{リゾート人気度}.{(リゾート人気度小数点以下 % 1000) / 100}{(リゾート人気度小数点以下 % 100) / 10}{(リゾート人気度小数点以下 % 10)}</div>"
	HTML_PRINT LOCALS, 1
	FOR LOCAL, 0, STRCOUNT(LOCALS:1, "<br>") + 5
		PRINTL
	NEXT
ENDIF


;変数初期化
VARSET 野外オナニー変数
VARSET 解放キャラ招待
モブ観光客数 = 0
集客人数 = 0


WAIT

BEGIN ABLUP


@人気度別施設充足度()
#FUNCTION

SELECTCASE リゾートランク
	CASE 0
		;無名リゾート
		;一個でも施設改造していればOK、してないなら不満小
		IF 施設改造度:3:0 || 施設改造度:5:0 || 施設改造度:15:0
			RETURNF 施設改造度:3:0 + 施設改造度:5:0 + 施設改造度:15:0
		ELSE
			RETURNF -1
		ENDIF
ENDSELECT

RETURNF 0
