@KOJO_DUNGEON_仲間と会話_12
CALL 口上変数初期化
LOCAL = FINDCHARA(NO, 12)
LOCAL:12 = キャラ隊列検索(LOCAL)

SELECTCASE RAND:5
	CASE 0
		WSTR:(K++) = 「依頼、はやくおわらそー」
	CASE 1
		WSTR:(K++) = 「あとでいっしょにゲームしよ？」
	CASE 2
		WSTR:(K++) = 「かんりにんはリゾート、マスターしてる？」
	CASE 3
		WSTR:(K++) = 「ほどほどにやってみよー」
	CASE 4
		WSTR:(K++) = 「ワムになんかしてほしい？」
ENDSELECT

CALL メッセージ欄表示用関数(@"探索用_{LOCAL:12}_顔", CALLNAME:LOCAL,,0)

