				CASE 0
					KSTR:(K++) = 「ぉ゛っ_H_　おしりっ_H_　あつぃっ_H_　あつくてとけちゃ……っ_H_　あ゛～～～～～～っっ_H__H_」
				CASE 1
					KSTR:(K++) = 「やだっ_H_　おしりっ_H_　なんかでぇっ_H_　ひっ_H_　ぃ゛～～～～～～っっ_H__H_」
				ENDSELECT
			ELSEIF NOWEX:対象キャラ:Ｂ絶頂
				SELECTCASE RAND:2
				CASE 0
					KSTR:(K++) = 「あっ_H_　あぁっ_H_　乳房が……あつくぅ……っ_H__H_　あ゛っ_H_　～～～～～～っっ_H__H_」
