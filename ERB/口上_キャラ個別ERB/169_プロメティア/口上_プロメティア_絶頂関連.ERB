				ENDSELECT
			ELSEIF NOWEX:対象キャラ:Ｖ絶頂
				SELECTCASE RAND:2
				CASE 0
					KSTR:(K++) = 「うそっ_H_　すごっ_H_　なかっ_H_　イくっ_H_　ぃ゛～～～～～～_H__H_」
				CASE 1
					KSTR:(K++) = 「あなたぁっ_H_　ごめんなさいっ_H_　わたしっ_H_　きもちよくって_H_　イくっ_H_　イっ_H_　～～～～～～っ_H__H_」
				ENDSELECT
