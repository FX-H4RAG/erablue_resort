ENDIF

FOR 対象番号, 0, 4
	SIF BATTLE_STATE:対象番号:キャラ番号 < 1 || BATTLE_STATE:対象番号:キャラ番号 == 24
		CONTINUE
	SIF BATTLE_STATE:対象番号:ＨＰ < 1
		CONTINUE
