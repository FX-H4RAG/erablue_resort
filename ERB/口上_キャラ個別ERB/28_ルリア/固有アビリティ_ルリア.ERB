
@固有アビ_28_1(ARGS, キャラ番号)
#DIM キャラ番号
#DIM 消費ＭＰ
#DIM シールド値
#DIMS アビ名

	IF 基礎BATTLE_STATE:キャラ番号:Lv >= 30
		アビ名 = 恵みの風＋＋
		シールド値 = 300
		消費ＭＰ = 70
	ELSEIF 基礎BATTLE_STATE:キャラ番号:Lv >= 15
		アビ名 = 恵みの風＋
		シールド値 = 250
		消費ＭＰ = 45
	ELSE
		アビ名 = 恵みの風
		消費ＭＰ = 30
	ENDIF

	;味方全体に幻影、バリア、
	SELECTCASE ARGS
		CASE "アビ名"
			TSTR:コマンド名受渡 = %アビ名%
			;アビ汎用文字列:選択時メッセージ１ = 
			;アビ汎用文字列:実行時メッセージ１ = 
		CASE "アビ説明文"
			詳細文文字列受け渡し変数 = 消費ＭＰ：{消費ＭＰ}<br>味方全体が敵の攻撃を一度だけ100％回避
		IF アビ名 == "恵みの風＋"
			詳細文文字列受け渡し変数 += @"<br>更にＨＰ：{シールド値}分のバリアを展開する"
		ELSEIF アビ名 == "恵みの風＋＋"
			詳細文文字列受け渡し変数 += @"<br>更にＨＰ：{シールド値}分のバリアを展開し、DA/TA確率を50％ＵＰ"
		ENDIF
			RETURN 消費ＭＰ
		CASE "アビ効果"
			;奥義ゲージUP
			CALL アビ対象選択テンプレート_自己のみ
			アビ汎用変数:効果量 = 20
			CALL アビテンプレート_有利効果_奥義ゲージUP
			;回避UP
			CALL アビ汎用変数文字列リセット
			CALL アビ対象選択テンプレート_味方全体_生者のみ
			アビ汎用文字列:バフ・デバフ枠 = 回避率A
			アビ汎用文字列:バフ・デバフ対象能力 = 回避率
			アビ汎用変数:効果量 = 100
			アビ汎用変数:持続回数 = 1
			CALL アビテンプレート_有利効果_バフ効果セット
		IF アビ名 == "恵みの風＋"
			;バリア
			CALL アビ汎用変数文字列リセット
			CALL アビ対象選択テンプレート_味方全体_生者のみ
			アビ汎用文字列:バフ・デバフ枠 = 風_バリア
			アビ汎用文字列:バフ・デバフ対象能力 = バリア
			アビ汎用変数:効果量 = シールド値
			CALL アビテンプレート_有利効果_バフ効果セット
		ELSEIF アビ名 == "恵みの風＋＋"
			;DA・TAUP
			CALL アビ汎用変数文字列リセット
			CALL アビ対象選択テンプレート_味方全体_生者のみ
			アビ汎用変数:効果量 = 50
			アビ汎用文字列:バフ・デバフ枠 = 風_DA/TA率
			アビ汎用文字列:バフ・デバフ対象能力 = 連続攻撃率
			アビ汎用変数:持続ターン = 3
			CALL アビテンプレート_有利効果_バフ効果セット
		ENDIF
	ENDSELECT


