;すごろく
;--------------------------------------------------
;この口上はTARGETでなくとも、すごろく参加者なら全員表示される

@KOJO_EVENT_すごろく_38(ARGS, ARG)
CALL 口上変数初期化
LOCAL = FINDCHARA(NO, 38)

SELECTCASE ARGS
	CASE "手番_ダイスロール"
		;ARGにはターン数が入る。ARG == 1でゲームスタート直後の開幕ターン
		KSTR:(K++) = 「どんな未来が待ってるのかしら？」
	CASE "手番_一回休み"
		;ARGには何も入らない
		KSTR:(K++) = 「あら、残念」
	CASE "ゴール！"
		;ARGにはターン数が入る
		;誰かがゴールした時点で終了するので、一位のキャラの口上しか表示されない
		KSTR:(K++) = 「こうなる未来は見えていたわ」
	CASE "全体イベント"
		;全員進むか全員戻るのイベント、ARGに移動量が入る
		IF ARG > 0
			;全員進む時
			KSTR:(K++) = 「ラッキー、と言っていいのかしら？」
		ELSEIF ARG < 0
			;全員戻る時
			KSTR:(K++) = 「難しい局面ね」
			KSTR:(K++) = そう言いながらもマギサは楽しそうだ。
		ENDIF
	CASE "罰ゲームイベント"
		;ARGには罰ゲーム種類が入る
		;TFLAG:コマンド結果受渡し変数２には、相手が必要な罰ゲームの場合には相手のキャラ番号が入る
		SELECTCASE ARG
			CASE 0
				;不思議な力で衣装がバニーに
				KSTR:(K++) = 「どう？　似合うでしょう？」
				KSTR:(K++) = 光沢のある生地に自己主張の強いバスト…過激すぎる…
			CASE 1
				;一発芸を披露する
				KSTR:(K++) = 「今から」
			CASE 2
				;不思議な力で衣装がメイド服に
				KSTR:(K++) = 「これは『カワイイ』というヤツね？」
			CASE 3
				;次のターンまで誰かを膝枕したままプレイする_する側
				KSTR:(K++) = 「……早くも足が痺れてきたわ……」
				
			CASE 4
				;誰かから思いっきりくすぐられる_される側
				KSTR:(K++) = 「やめっ、やっ、くすぐったいの苦手なのよ……！」
			CASE 5
				;誰かを思い切りハグする_する側
				KSTR:(K++) = 「こう、ぎゅーっと……あら、胸で苦しい？」
		ENDSELECT
	CASE "罰ゲームイベント_反応"
		;ARGには罰ゲーム種類が入る
		;相手が必要な罰ゲームイベントの、相手側になった時の口上。罰ゲーム側のキャラ番号は「参加者:行動手番」で引っ張ってこれる
		SELECTCASE ARG
			CASE 3
				;次のターンまで誰かを膝枕したままプレイする_される側
				KSTR:(K++) = 「ふふっ、重かったら言ってね」
				KSTR:(K++) = 「……ちょっと、早すぎよ」
			CASE 4
				;誰かから思いっきりくすぐられる_する側
				KSTR:(K++) = 「あら～？　じゃあ、ここはどうかしら？」
			CASE 5
				;誰かを思い切りハグする_される側
