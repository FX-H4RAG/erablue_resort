			KSTR:(K++) = 「なかなかいい図書館ね。質も量も侮れないわ。ほら、この本、ずっと読みたかったのよね！」
		CASE 1503, 15
			;プールで監視員中
			KSTR:(K++) = サングラスに競泳水着のマギサが監視台に座っている。
			KSTR:(K++) = 「モーさん、あそこお願い！」
		CASE IS > 10000
			;各種店舗で店番中
			CALLFORMF 空艇港店舗名表示_{空艇港店舗状況:(現在仕事:対象キャラ:1 - 10000):0}(現在仕事:対象キャラ:1 - 10000)
			SELECTCASE REPLACE(TSTR:場所名受渡, "『.*』", "")
				CASE "道具屋"
					KSTR:(K++) = マギサは退屈そうに欠伸を噛み殺していたが、%CALLNAME:MASTER%の視線に気づくと、すっと背筋を伸ばした。
				CASE "土産物屋"
					KSTR:(K++) = マギサは退屈そうに欠伸を噛み殺していたが、%CALLNAME:MASTER%の視線に気づくと、すっと背筋を伸ばした。
				CASE "食事処"
					KSTR:(K++) = マギサは退屈そうに欠伸を噛み殺していたが、%CALLNAME:MASTER%の視線に気づくと、すっと背筋を伸ばした。
				CASE "装飾品店"
					KSTR:(K++) = マギサは退屈そうに欠伸を噛み殺していたが、%CALLNAME:MASTER%の視線に気づくと、すっと背筋を伸ばした。
			ENDSELECT
	ENDSELECT
ENDIF
;この時点で口上が入ってるなら表示へ飛ばす
SIF KSTR:0 != ""
	GOTO 表示位置
;状況で分岐

IF CFLAG:対象キャラ:飲み会
	;飲み会中
	KSTR:(K++) = 
