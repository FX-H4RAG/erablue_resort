IF RFLAG:コマンド結果受渡し変数
	SELECTCASE RFLAG:コマンド結果受渡し変数３
		CASE 1
			;ルピ賭けあなた勝利
			KSTR:(K++) = 「負けちゃった！！次は勝つぞ！！」
		CASE -1
			;ルピ賭けキャラ勝利
			KSTR:(K++) = 「ふふーん。天はわしに味方した！！」
		CASE 2
			;罰ゲーム賭けあなた勝利
			SELECTCASE RFLAG:コマンド結果受渡し変数２
				CASE 0
					;でこぴん
					KSTR:(K++) = 「いったーい！！手加減してくれてもいいんだぞお前ぇ……」
				CASE 1
					;お酒を飲む、TCVAR:LOCAL:初飲酒フラグ = 1の時、キャラが初めて飲酒した
					IF TCVAR:LOCAL:初飲酒フラグ
						KSTR:(K++) = 「うぉお美味だぞ！これが罰ゲームでいいのかぁ？」
					ELSE
						KSTR:(K++) = 「おいしいぞ_H_…つぎはぜったいかつ！！」
					ENDIF
				CASE 10
					;下着の色を言う
					KSTR:(K++) = 「えっと～……本当に聞くんだなお前…」
					KSTR:(K++) = 「履いてないぞ！！残念だったな～_H_」
				CASE 11
					;セクシーポーズで淫語
					KSTR:(K++) = 「そうだなぁ……」
					KSTR:(K++) = %CALLNAME:TARGET%は非常に丈の短い、秘部を隠す前掛け状の布に手をかけ、
					KSTR:(K++) = 勢いよく%CALLNAME:MASTER%の前でめくり上げた！！
					KSTR:(K++) =「残念だったな～_H_%CALLNAME:MASTER%」
					KSTR:(K++) = %CALLNAME:TARGET%の黒タイツ越しに見えるであろう秘部は、尻尾で隠されていた……
				CASE 12
					;乳首当てゲーム
					IF RFLAG:コマンド結果受渡し変数４ == 1
						;的中
						KSTR:(K++) = 「ひゃぁ_H_…… 」
						KSTR:(K++) = %CALLNAME:TARGET%は恥ずかしそうにか細い声で悲鳴を上げた
						KSTR:(K++) = 「コホン…次はま、負けんぞ！！！」
					ELSEIF RFLAG:コマンド結果受渡し変数４ == -1
						;ハズレ
						KSTR:(K++) = 「うぅ………恥ずかしくないからな！！乳首じゃないし！！」
					ELSEIF RFLAG:コマンド結果受渡し変数４ == 2
						;的中したが誤魔化したので指をぐりぐりして認めさせる
						KSTR:(K++) = 「うぁあ_H_……残念だったな_H_私の勝ちだ」
						KSTR:(K++) = %CALLNAME:MASTER%は小さく強情な突起を何度も押さえつけ摩擦させた
						KSTR:(K++) = 「ねぇご、めん許して！！わ_H_…わしが悪かったから！！」
						KSTR:(K++) = %CALLNAME:MASTER%は%CALLNAME:TARGET%は半泣きになるまでお仕置きした。
					ENDIF
			ENDSELECT
		CASE -2
			;罰ゲーム賭けキャラ勝利
			KSTR:(K++) = 
	ENDSELECT
ENDIF

