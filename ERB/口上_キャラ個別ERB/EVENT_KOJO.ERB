;--------------------------------------------------
;@KOJO_MESSAGE_COM関係
;コマンド実行時に出力されます
;--------------------------------------------------
@KOJO_MESSAGE_COM
#DIM 複数人プレイフラグ

複数人プレイフラグ = 0
VARSET LOCAL
IF FLAG:汎用文章表示切り替えオプション > 0
	IF TCVAR:TARGET:弱点コマンドフラグ
		DRAWLINE
		SETCOLOR カラーパレット("えっちな色")
		PRINTW <<<弱点コマンド！！>>>
		RESETCOLOR
	ENDIF
	CALL TRAIN_MESSAGE
	SIF RESULT
		PRINTW
	PRINTL
ENDIF
IF FLAG:口上表示切り替えオプション <= 0
	RETURN 0
ENDIF

CALL 口上変数初期化
RESULT = 0
;RESULTS =
;口上の存在判定 and RESULTSに文字列代入
;TRYCALLFORM KOJO_K{NO:TARGET}
;IF !RESULT
;	RETURN 0
;ENDIF
;RESULT = 0
;ボールギャグ
; IF TEQUIP:ボールギャグ && SELECTCOM != 106
; 	TRYCALLFORM KOJO_COM_BALLGAG_K{NO:TARGET}
;SELECTCOM

;口上ありでも汎用喘ぎを使うならここで表示
IF GETBIT(汎用喘ぎ使用OPTION, 0) && GETBIT(汎用喘ぎ使用OPTION, 1)
	IF TFLAG:オートコマンドフラグ > 0
		CALL 汎用喘ぎ処理(AUTOCOM_相手番号保存)
	ELSE
		CALL 汎用喘ぎ処理(TARGET)
	ENDIF
ENDIF

RESULT = 0
IF TFLAG:オートコマンドフラグ > 1000
	TRYCALLFORM KOJO_AUTOCOM_{NO:AUTOCOM_相手番号保存}_{TFLAG:オートコマンドフラグ - 1000}
ELSEIF TFLAG:オートコマンドフラグ > 0
	TRYCALLFORM KOJO_PREAUTOCOM_{NO:AUTOCOM_相手番号保存}_{TFLAG:オートコマンドフラグ}
ELSEIF RSTR:SELECTCOM_S受け渡し != ""
	TRYCALLFORM KOJO_COM_{NO:TARGET}_%RSTR:SELECTCOM_S受け渡し%
	TRYCALLFORMF COMTYPE_S_%RSTR:SELECTCOM_S受け渡し%
	IF TFLAG:コマンドタイプ受渡 == 12
		複数人プレイフラグ = 1
	ENDIF
ELSEIF SELECTCOM >= 380 && SELECTCOM <= 384
	TRYCALLFORM KOJO_COM_{NO:TARGET}_{SELECTCOM}_{CFLAG:MASTER:現在マップ種別}_{CFLAG:MASTER:現在位置}
	TRYCALLFORMF COMTYPE_{SELECTCOM}
	IF TFLAG:コマンドタイプ受渡 == 12
		複数人プレイフラグ = 1
	ENDIF
ELSEIF SELECTCOM >= 370 && SELECTCOM <= 374
	TRYCALLFORM KOJO_COM_{NO:TARGET}_{SELECTCOM}_{NO:TARGET}
	TRYCALLFORMF COMTYPE_{SELECTCOM}
	IF TFLAG:コマンドタイプ受渡 == 12
		複数人プレイフラグ = 1
	ENDIF
ELSEIF SELECTCOM == 404
	;覗きは対象がTARGETじゃないことがあるので別枠で設定
	TRYCALLFORM KOJO_COM_{NO:(RFLAG:コマンド結果受渡し変数２)}_{SELECTCOM}
ELSE
	TRYCALLFORM KOJO_COM_{NO:TARGET}_{SELECTCOM}
	TRYCALLFORMF COMTYPE_{SELECTCOM}
	IF TFLAG:コマンドタイプ受渡 == 12
		複数人プレイフラグ = 1
	ENDIF
ENDIF

SIF K < 1
	LOCAL:1 = 1

IF 複数人プレイフラグ
	DRAWLINE
	;複数人プレイコマンドなので、TARGETじゃない方のキャラも喋らせる
	IF SELECTCOM == 210
		;呼び出すだけはまだTARGET配列にキャラ番号が入ってないのでここで直接投げる
		TRYCALLFORM KOJO_COM_{NO:(RFLAG:コマンド結果受渡し変数)}_{SELECTCOM}_非対象側
	ELSEIF TARGET != TARGET:1
		TRYCALLFORM KOJO_COM_{NO:(TARGET:1)}_{SELECTCOM}_非対象側
	ELSEIF TARGET != TARGET:2
		TRYCALLFORM KOJO_COM_{NO:(TARGET:2)}_{SELECTCOM}_非対象側
	ENDIF
ENDIF



IF K < 1 && LOCAL:1 == 1
	;通常口上も複数人プレイ口上も無かった場合、非口上メッセージを出す
	;口上なしで汎用喘ぎを使うならここで表示
	IF GETBIT(汎用喘ぎ使用OPTION, 0) && GETBIT(汎用喘ぎ使用OPTION, 1) == 0
		IF TFLAG:オートコマンドフラグ > 0
			CALL 汎用喘ぎ処理(AUTOCOM_相手番号保存)
		ELSE
			CALL 汎用喘ぎ処理(TARGET)
		ENDIF
	ENDIF
	CALL TRAIN_MESSAGE_非口上時
ENDIF
