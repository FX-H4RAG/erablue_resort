@敵チャージ行動_Lv10_ボス人食い鳥
#DIM 攻撃対象, 10
VARSET LOCAL
VARSET 攻撃対象

;味方の数判定
FOR LOCAL, 0, 4
	SIF BATTLE_STATE:LOCAL:キャラ番号 < 1
		CONTINUE
	SIF BATTLE_STATE:LOCAL:ＨＰ < 1
		CONTINUE
	攻撃対象:(LOCAL:10) = LOCAL
	LOCAL:10 += 1
NEXT

LOCAL = RAND:(LOCAL:10)
戦闘行動対象 = 攻撃対象:LOCAL


戦闘行動内容 = 200
CALL 口上変数初期化


KSTR:(K++) = %敵BATTLE_STATE_STR:(戦闘行動キャラ - 10):エネミー名%の食いちぎり！
;ダメージ計算
CALL ダメージ計算処理(120, 50)
LOCAL = RESULT
NSTR:(K++) = %CALLNAME:(BATTLE_STATE:戦闘行動対象:キャラ番号)%に
KSTR:(K++) = {LOCAL}のダメージ！　
BATTLE_STATE:戦闘行動対象:ＨＰ = MAX(BATTLE_STATE:戦闘行動対象:ＨＰ - LOCAL, 0)
IF BATTLE_STATE:戦闘行動対象:ＨＰ < 1
	WSTR:(K++) = 　
	CALL 戦闘不能時処理(戦闘行動対象)
	KSTR:(K++) = %CALLNAME:(BATTLE_STATE:戦闘行動対象:キャラ番号)%は倒れた！
ENDIF
LOCAL = MIN(LOCAL, 敵BATTLE_STATE:(戦闘行動キャラ - 10):最大ＨＰ - 敵BATTLE_STATE:(戦闘行動キャラ - 10):ＨＰ)
KSTR:(K++) = %敵BATTLE_STATE_STR:(戦闘行動キャラ - 10):エネミー名%のＨＰが{LOCAL}回復した！
敵BATTLE_STATE:(戦闘行動キャラ - 10):ＨＰ += LOCAL



