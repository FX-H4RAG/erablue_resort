@敵チャージ行動_Lv2_風のエレメンタル
#DIM 攻撃対象, 10
VARSET LOCAL
VARSET 攻撃対象

;味方の数判定
FOR LOCAL, 0, 4
	SIF BATTLE_STATE:LOCAL:キャラ番号 < 1
		CONTINUE
	SIF BATTLE_STATE:LOCAL:ＨＰ < 1
		CONTINUE
	攻撃対象:(LOCAL:10) = LOCAL
	LOCAL:10 += 1
NEXT

LOCAL = RAND:(LOCAL:10)
戦闘行動対象 = 攻撃対象:LOCAL

CALL かばうチェック_味方()


戦闘行動内容 = 200
CALL 口上変数初期化


KSTR:(K++) = %敵BATTLE_STATE_STR:(戦闘行動キャラ - 10):エネミー名%のウインドスラッシュ！
;ダメージ計算
IF アビ汎用変数:かばうフラグ
	WSTR:(K++) = %CALLNAME:(BATTLE_STATE:戦闘行動対象:キャラ番号)%が攻撃をかばった！
ENDIF
NSTR:(K++) = %CALLNAME:(BATTLE_STATE:戦闘行動対象:キャラ番号)%に
CALL ダメージ計算処理(100)
KSTR:(K++) = {RESULT}のダメージ！　
BATTLE_STATE:戦闘行動対象:ＨＰ = MAX(BATTLE_STATE:戦闘行動対象:ＨＰ - RESULT, 0)
IF BATTLE_STATE:戦闘行動対象:ＨＰ < 1
	WSTR:(K++) = 　
	CALL 戦闘不能時処理(戦闘行動対象)
	KSTR:(K++) = %CALLNAME:(BATTLE_STATE:戦闘行動対象:キャラ番号)%は倒れた！
ENDIF

LOCAL = RAND:(LOCAL:10)
戦闘行動対象 = 攻撃対象:LOCAL

NSTR:(K++) = %CALLNAME:(BATTLE_STATE:戦闘行動対象:キャラ番号)%に
CALL ダメージ計算処理(100)
KSTR:(K++) = {RESULT}のダメージ！　
BATTLE_STATE:戦闘行動対象:ＨＰ = MAX(BATTLE_STATE:戦闘行動対象:ＨＰ - RESULT, 0)
IF BATTLE_STATE:戦闘行動対象:ＨＰ < 1
