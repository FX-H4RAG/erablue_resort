敵BATTLE_STATE:ARG:ＨＰ = 200
敵BATTLE_STATE:ARG:攻撃力 = 160
敵BATTLE_STATE:ARG:防御力 = 200
敵BATTLE_STATE:ARG:回復力 = 0
