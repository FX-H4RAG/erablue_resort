@敵チャージ行動_Lv4_ジェリー
#DIM 攻撃対象, 10
VARSET LOCAL
VARSET 攻撃対象

;味方の数判定
FOR LOCAL, 0, 4
	SIF BATTLE_STATE:LOCAL:キャラ番号 < 1
		CONTINUE
	SIF BATTLE_STATE:LOCAL:ＨＰ < 1
		CONTINUE
	攻撃対象:(LOCAL:10) = LOCAL
	LOCAL:10 += 1
NEXT

LOCAL = RAND:(LOCAL:10)
戦闘行動対象 = 攻撃対象:LOCAL

CALL かばうチェック_味方()


戦闘行動内容 = 200
CALL 口上変数初期化


KSTR:(K++) = %敵BATTLE_STATE_STR:(戦闘行動キャラ - 10):エネミー名%のアシッドウォーター！
;ダメージ計算
IF アビ汎用変数:かばうフラグ
	WSTR:(K++) = %CALLNAME:(BATTLE_STATE:戦闘行動対象:キャラ番号)%が攻撃をかばった！
ENDIF
CALL ダメージ計算処理(180)
NSTR:(K++) = %CALLNAME:(BATTLE_STATE:戦闘行動対象:キャラ番号)%に
KSTR:(K++) = {RESULT}のダメージ！　
BATTLE_STATE:戦闘行動対象:ＨＰ = MAX(BATTLE_STATE:戦闘行動対象:ＨＰ - RESULT, 0)
IF BATTLE_STATE:戦闘行動対象:ＨＰ < 1
	WSTR:(K++) = 　
	CALL 戦闘不能時処理(戦闘行動対象)
	KSTR:(K++) = %CALLNAME:(BATTLE_STATE:戦闘行動対象:キャラ番号)%は倒れた！
ELSE
	アビ汎用変数:効果対象 = 戦闘行動対象
	アビ汎用文字列:バフ・デバフ枠 = 防御力A
	アビ汎用文字列:バフ・デバフ対象能力 = 防御力
	アビ汎用変数:効果割合 = 20
	アビ汎用変数:持続ターン = 3
	アビ汎用変数:基礎成功確率 = 50
	CALL アビ汎用_デバフセット("アシッドウォーター")
		IF RESULT == 1
			KSTR:(K++) = %CALLNAME:(BATTLE_STATE:戦闘行動対象:キャラ番号)%の防御力が下がった！
		ENDIF
ENDIF

