;空いてる枠判定
FOR LOCAL, 0, 10
	IF 敵BATTLE_STATE_STR:LOCAL:エネミー名 == ""
		敵BATTLE_STATE_STR:LOCAL:エネミー名 = Lv4_人食い鳥
		TRYCALLFORM 敵BATTLE_STATE_Lv4_人食い鳥(LOCAL)
		敵BATTLE_STATE:LOCAL:行動済みフラグ = 1
		敵BATTLE_STATE:LOCAL:チャージターン = 0
		追加完了フラグ = 1
		BREAK
	ENDIF
NEXT
FOR LOCAL, 0, 10
	IF 敵BATTLE_STATE_STR:LOCAL:エネミー名 == ""
		敵BATTLE_STATE_STR:LOCAL:エネミー名 = Lv4_人食い鳥
		TRYCALLFORM 敵BATTLE_STATE_Lv4_人食い鳥(LOCAL)
		敵BATTLE_STATE:LOCAL:行動済みフラグ = 1
		敵BATTLE_STATE:LOCAL:チャージターン = 0
		追加完了フラグ += 1
		BREAK
	ENDIF
NEXT

IF 追加完了フラグ == 2
	WSTR:(K++) = Lv4_人食い鳥が現れた！
	WSTR:(K++) = Lv4_人食い鳥が現れた！
ELSEIF 追加完了フラグ == 1
	WSTR:(K++) = Lv4_人食い鳥が現れた！
