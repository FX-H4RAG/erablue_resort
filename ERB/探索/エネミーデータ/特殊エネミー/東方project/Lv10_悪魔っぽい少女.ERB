敵BATTLE_STATE:ARG:最大ＨＰ = 8800
敵BATTLE_STATE:ARG:ＨＰ = 8800
敵BATTLE_STATE:ARG:攻撃力 = 400
敵BATTLE_STATE:ARG:防御力 = 470
敵BATTLE_STATE:ARG:回復力 = 0
