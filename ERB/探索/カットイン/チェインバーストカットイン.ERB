#DIM カットイン人数;顔画像がない場合はカットイン人数自体を減らす
#DIM カットインメンバ,4;画像がない場合の編成を記録する
レイヤー番号 = 50

カットイン人数 = ターン中奥義回数保存
VARSET カットインメンバ

;人数確定
FOR メンバ , 0 , ターン中奥義回数保存
	キャラTEMP = チェンバ基準キャラ保存:メンバ
	CSTR:キャラTEMP:画像フォルダ = {NO:キャラTEMP}%CALLNAME:キャラTEMP%
	GDISPOSE レイヤー番号 + 20 + メンバ
	GCREATEFROMFILE レイヤー番号 + 20 + メンバ, @"%CSTR:キャラTEMP:画像フォルダ%/縦カットイン.png"
	IF RESULT == 0
		GCREATEFROMFILE レイヤー番号 + 20 + メンバ, @"%CSTR:キャラTEMP:画像フォルダ%/顔_デフォルト.png"
		IF RESULT == 0
		;デフォルト画像もなければカットイン人数自体を減らす
			カットイン人数 -= 1
			CONTINUE
		ENDIF
	ENDIF
	;画像があったキャラをカットインメンバに登録
	FOR LOCAL ,0 ,4
		IF カットインメンバ:LOCAL < 1
			カットインメンバ:LOCAL = チェンバ基準キャラ保存:メンバ
			BREAK
		ENDIF
	NEXT
NEXT

;画像作成
FOR LOCAL ,0 ,10
	GDISPOSE レイヤー番号 + LOCAL
	GCREATE レイヤー番号 + LOCAL, 900, 900
NEXT
FOR メンバ ,0 ,カットイン人数
	キャラTEMP = カットインメンバ:メンバ
	CSTR:キャラTEMP:画像フォルダ = {NO:キャラTEMP}%CALLNAME:キャラTEMP%
