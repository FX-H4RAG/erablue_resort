			ELSE
				KSTR:(K++) = %CALLNAME:(BATTLE_STATE:LOCAL:キャラ番号)%には効果がなかった…
			ENDIF
			BATTLE_STATE:LOCAL:奥義ゲージ = MIN(BATTLE_STATE:LOCAL:奥義ゲージ + 10, BATTLE_STATE:LOCAL:ゲージ最大値)
		NEXT
