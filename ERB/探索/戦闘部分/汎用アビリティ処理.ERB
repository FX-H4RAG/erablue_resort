#DIM 対象キャラ
#DIM 消費ＭＰ
#DIMS アビ名
#DIM 効果数値
IF LEVEL >= 3
	アビ名 = ファイア＋＋
	消費ＭＰ = 25
	効果数値 = 250
ELSEIF LEVEL >= 2
	アビ名 = ファイア＋
	消費ＭＰ = 22
	効果数値 = 220
ELSEIF LEVEL >= 1
	アビ名 = ファイア
	消費ＭＰ = 20
	効果数値 = 200
ELSE
	アビ名 = 
ENDIF

