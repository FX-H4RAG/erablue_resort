#DIM キャラ番号
#DIM 消費ＭＰ
#DIMS アビ名
#DIM 効果数値
IF LEVEL >= 3
	アビ名 = ファイア＋＋
	効果数値 = 250
	消費ＭＰ = 25
ELSEIF LEVEL >= 2
	アビ名 = ファイア＋
	効果数値 = 220
	消費ＭＰ = 22
ELSEIF LEVEL >= 1
	アビ名 = ファイア
	効果数値 = 200
	消費ＭＰ = 20
ELSE
	アビ名 = 
ENDIF


SELECTCASE ARGS
	CASE "アビ名"
		TSTR:コマンド名受渡 = %アビ名%
	CASE "アビ説明文"
		IF LEVEL >= 3
			詳細文文字列受け渡し変数 = 消費ＭＰ：%TOFULL(TOSTR(消費ＭＰ))%<br>敵横列に火属性の［攻撃力✕{効果数値}％］ダメージを与える。
		ELSE
