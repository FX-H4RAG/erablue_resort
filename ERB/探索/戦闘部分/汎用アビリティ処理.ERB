@GET_SKILL_LEVEL(アビ番号, キャラ番号)
#FUNCTION
#DIM アビ番号
#DIM キャラ番号
SELECTCASE アビ番号
	CASE 1
		SELECTCASE 基礎BATTLE_STATE:キャラ番号:Lv
			CASE IS >= 20
				RETURNF 3
			CASE IS >= 8
				RETURNF 2
			CASEELSE
				RETURNF 1
		ENDSELECT
	CASE 2
		SELECTCASE 基礎BATTLE_STATE:キャラ番号:Lv
			CASE IS >= 28
				RETURNF 3
			CASE IS >= 16
				RETURNF 2
			CASE IS >= 4
				RETURNF 1
			CASEELSE
				RETURNF 0
		ENDSELECT
	CASEELSE
		SELECTCASE 基礎BATTLE_STATE:キャラ番号:Lv
			CASE IS >= 32
				RETURNF 3
			CASE IS >= 24
				RETURNF 2
			CASE IS >= 12
				RETURNF 1
			CASEELSE
				RETURNF 0
		ENDSELECT
ENDSELECT

