@属性有利不利(攻撃側, 防御側, ARGS)
#FUNCTION
#DIM 攻撃側
#DIM 防御側

SELECTCASE 攻撃側
	CASE 0
		;火
		IF 防御側 == 2
			RETURNF 1
		ELSEIF 防御側 == 1
			RETURNF -1
		ENDIF
	CASE 1
		;水
		IF 防御側 == 0
			RETURNF 1
		ELSEIF 防御側 == 3
			RETURNF -1
		ENDIF
	CASE 2
		;風
		IF 防御側 == 3
			RETURNF 1
		ELSEIF 防御側 == 0
			RETURNF -1
		ENDIF
	CASE 3
		;土
		IF 防御側 == 1
			RETURNF 1
		ELSEIF 防御側 == 2
			RETURNF -1
		ENDIF
	CASE 4
		;光
		IF 防御側 == 5
			IF ARGS == "味方側"
				RETURNF 1
			ELSEIF ARGS == "敵側"
				RETURNF -1
			ENDIF
		ENDIF
	CASE 5
		;闇
		IF 防御側 == 4
			IF ARGS == "味方側"
				RETURNF 1
			ELSEIF ARGS == "敵側"
				RETURNF -1
			ENDIF
		ENDIF
ENDSELECT

