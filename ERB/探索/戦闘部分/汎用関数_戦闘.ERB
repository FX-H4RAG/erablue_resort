@キャラ隊列検索(ARG)
#FUNCTION
FOR LOCAL, 0, 14
	SIF LOCAL > 3 && LOCAL < 10
		CONTINUE
	IF BATTLE_STATE:LOCAL:キャラ番号 == ARG
		RETURNF LOCAL
	ENDIF
NEXT
RETURNF -1

