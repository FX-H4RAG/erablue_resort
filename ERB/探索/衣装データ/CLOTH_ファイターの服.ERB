@衣装関数_ファイターの服(処理モード, キャラ番号)
#DIM キャラ番号
#DIMS 処理モード

SELECTCASE 処理モード
	CASE "衣装種別"
		衣装関連文字列受け渡し = 通常衣装
	CASE "アビ名_1"
		TSTR:コマンド名受渡 = ウェポンバースト
	CASE "消費MP_1"
		RETURN 40
	CASE "効果処理_1"
		CALL 口上変数初期化
		KSTR:(K++) = %CALLNAME:(BATTLE_STATE:戦闘行動キャラ:キャラ番号)%のウェポンバースト！
		BATTLE_STATE:戦闘行動キャラ:ＭＰ -= 40

		アビ汎用変数:効果対象 = 戦闘行動キャラ
		CALL アビ汎用_ポンバ
	CASE "アビ名_2"
		TSTR:コマンド名受渡 = レイジ
	CASE "消費MP_2"
		RETURN 20
	CASE "効果処理_2"
		CALL 口上変数初期化
		KSTR:(K++) = %CALLNAME:(BATTLE_STATE:戦闘行動キャラ:キャラ番号)%のレイジ！
		BATTLE_STATE:戦闘行動キャラ:ＭＰ -= 20
		FOR LOCAL, 0, 4
			IF BATTLE_STATE:LOCAL:0
				アビ汎用変数:効果対象 = LOCAL
				アビ汎用変数:効果量 = 20
				CALL アビ汎用_味方バフ_攻撃力A("レイジ")
			ENDIF
		NEXT
	CASE "アビ名_3"
		TSTR:コマンド名受渡 = アーマーブレイク
	CASE "消費MP_3"
		RETURN 15
ENDSELECT




