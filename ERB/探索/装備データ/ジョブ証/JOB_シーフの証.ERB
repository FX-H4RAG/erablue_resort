	LEVEL = GET_JOBSKILL_LEVEL(対象キャラ)
	IF 得意武器判定(対象キャラ, "銃")
	ELSEIF 基礎BATTLE_STATE:対象キャラ:ステータスタイプ保存 == タイプ文字列数値変換("連撃")
	ELSE
		LEVEL --
	ENDIF
ELSE
	LEVEL = GET_JOBTOKEN_LEVEL()
ENDIF
SELECTCASE LEVEL
	CASEELSE
		; 効果数値:0 = 0
ENDSELECT

