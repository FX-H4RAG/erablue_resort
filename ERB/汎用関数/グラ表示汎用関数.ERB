;********************************************************************************************
;@グラ表示用文字列算出(ARG, TYPE="顔_")
;  キャラARGのパラメータなどの条件を元に、差分ファイルがあればそれを返す
;  こちらは条件式による振り分けのみ行い、差分ファイルのサーチ自体は@差分抽出で行う
;  条件設定は上にあるほど優先度が高い
;  TYPE "顔_" または "短冊_"
;********************************************************************************************

@グラ表示用文字列算出(ARG, TYPE="顔_")
#FUNCTIONS
#DIMS TYPE
#DIMS CONST V_FRONT = "正常位","対面座位", "側位","屈曲位", "駅弁", "対面立位", "騎乗位", "同時挿入"
#DIMS CONST V_BACK = "後背位","寝バック", "側位", "背面座位", "逆駅弁", "立ちバック", "同時挿入"
#DIMS CONST A_FRONT = "Ａ正常位","Ａ対面座位", "Ａ側位","Ａ屈曲位", "Ａ駅弁", "Ａ対面立位", "Ａ騎乗位", "Ａ同時挿入"
#DIMS CONST A_BACK = "Ａ後背位","Ａ寝バック", "Ａ側位", "Ａ背面座位", "Ａ逆駅弁", "Ａ立ちバック", "Ａ同時挿入"
#DIMS D_NAME

VARSET LOCAL
VARSET 差分エフェクト

D_NAME '= ""
LOCALS '= CSTR:ARG:顔グラ表示切り替え用文字列
SIF TYPE == "短冊_"
	LOCALS '= CSTR:ARG:短冊グラ表示切り替え用文字列

IF LOCALS == ""
	SIF CSTR:ARG:表示グラフィックカテゴリ == ""
		CSTR:ARG:表示グラフィックカテゴリ = デフォルト
	LOCALS = %TYPE + CSTR:ARG:表示グラフィックカテゴリ%
ENDIF

;設定グラの差分を見る
IF MODE_確認_ターゲット側("Ｖ挿入系", ARG) > -1
	;各体位の挿入差分があればそれを表示する
	FOR LOCAL, 0, VARSIZE("V_FRONT")
		IF MODE_確認_ターゲット側(V_FRONT:LOCAL, ARG) > -1
			LOCAL:1 ++
			SIF TCVAR:ARG:前ターン被射精位置 == 1 && 差分抽出(ARG, TYPE, LOCALS, "膣内射精", "膣内射精") && D_NAME == ""
				D_NAME '= RESULTS
			SIF 差分抽出(ARG, TYPE, LOCALS, V_FRONT:LOCAL, "挿入") && D_NAME == ""
				D_NAME '= RESULTS
		ENDIF
	NEXT
	FOR LOCAL, 0, VARSIZE("V_BACK")
		IF MODE_確認_ターゲット側(V_BACK:LOCAL, ARG) > -1
			LOCAL:2 ++
			SIF TCVAR:ARG:前ターン被射精位置 == 1 && 差分抽出(ARG, TYPE, LOCALS, "膣内射精", "膣内射精") && D_NAME == ""
				D_NAME '= RESULTS
			SIF 差分抽出(ARG, TYPE, LOCALS, V_BACK:LOCAL, "挿入") && D_NAME == ""
				D_NAME '= RESULTS
		ENDIF
	NEXT
	;なければ正面体位は正常位を、背面体位は後背位を表示する
	IF LOCAL:1 && D_NAME == ""
		VARSET 差分エフェクト
		IF TCVAR:ARG:前ターン被射精位置 == 1 && 差分抽出(ARG, TYPE, LOCALS, "膣内射精", "膣内射精")
				D_NAME '= RESULTS
		ELSEIF 差分抽出(ARG, TYPE, LOCALS, "正常位", "挿入")
			D_NAME '= RESULTS
		ENDIF
	ELSEIF LOCAL:2 && D_NAME == ""
		VARSET 差分エフェクト
		IF TCVAR:ARG:前ターン被射精位置 == 1 && 差分抽出(ARG, TYPE, LOCALS, "膣内射精", "膣内射精")
				D_NAME '= RESULTS
		ELSEIF 差分抽出(ARG, TYPE, LOCALS, "後背位", "挿入")
			D_NAME '= RESULTS
		ENDIF
	ENDIF
ENDIF
IF MODE_確認_ターゲット側("Ａ挿入系", ARG) > -1
	;各体位の挿入差分があればそれを表示する
	FOR LOCAL, 0, VARSIZE("A_FRONT")
		IF MODE_確認_ターゲット側(A_FRONT:LOCAL, ARG) > -1
			LOCAL:1 ++
			SIF TCVAR:ARG:前ターン被射精位置 == 2 && 差分抽出(ARG, TYPE, LOCALS, "腸内射精", "") && D_NAME == ""
				D_NAME '= RESULTS
			SIF 差分抽出(ARG, TYPE, LOCALS, A_FRONT:LOCAL, "Ａ挿入") && D_NAME == ""
				D_NAME '= RESULTS
		ENDIF
	NEXT
	FOR LOCAL, 0, VARSIZE("A_BACK")
		IF MODE_確認_ターゲット側(A_BACK:LOCAL, ARG) > -1
			LOCAL:2 ++
			SIF TCVAR:ARG:前ターン被射精位置 == 2 && 差分抽出(ARG, TYPE, LOCALS, "腸内射精", "") && D_NAME == ""
				D_NAME '= RESULTS
			SIF 差分抽出(ARG, TYPE, LOCALS, A_BACK:LOCAL, "Ａ挿入") && D_NAME == ""
				D_NAME '= RESULTS
		ENDIF
	NEXT
	;なければ正面体位はA正常位を、背面体位はA後背位を表示する
	SIF LOCAL:1 && 差分抽出(ARG, TYPE, LOCALS, "Ａ正常位", "") && D_NAME == ""
		D_NAME '= RESULTS
	SIF LOCAL:2 && 差分抽出(ARG, TYPE, LOCALS, "Ａ後背位", "") && D_NAME == ""
			D_NAME '= RESULTS
ENDIF
IF MAX(MODE_確認_プレイヤー側("フェラチオ系", ARG), MODE_確認_ターゲット側("シックスナイン", ARG), MODE_確認_プレイヤー側("シックスナイン", ARG), MODE_確認_プレイヤー側("パイズリ系", ARG)) > -1
	SIF TCVAR:ARG:前ターン被射精位置 == 3 && 差分抽出(ARG, TYPE, LOCALS, "口内射精", "口内射精") && D_NAME == ""
		D_NAME '= RESULTS
	SIF TCVAR:ARG:前ターン被射精位置 == 4 && 差分抽出(ARG, TYPE, LOCALS, "乳内射精", @"乳内射精{LIMIT(TALENT:ARG:バストサイズ, 0, 4)}") && D_NAME == ""
		D_NAME '= RESULTS
	SIF TCVAR:ARG:前ターン被射精位置 == 5 && 差分抽出(ARG, TYPE, LOCALS, "顔射") && D_NAME == ""
		D_NAME '= RESULTS
	SIF MODE_確認_プレイヤー側("パイズリ系", ARG) > -1 && 差分抽出(ARG, TYPE, LOCALS, "パイズリ", @"パイズリ{LIMIT(TALENT:ARG:バストサイズ, 0, 4)}") && D_NAME == ""
		D_NAME '= RESULTS
	SIF (MODE_確認_プレイヤー側("フェラチオ系", ARG) > -1 || MODE_確認_プレイヤー側("シックスナイン", ARG) > -1 || MODE_確認_ターゲット側("シックスナイン", ARG) > -1) && 差分抽出(ARG, TYPE, LOCALS, "フェラチオ", "フェラチオ") && D_NAME == ""
		D_NAME '= RESULTS
ENDIF

IF TCVAR:ARG:前ターン絶頂
	;前ターン絶頂時
	SIF 差分抽出(ARG, TYPE, LOCALS, "絶頂", , "絶頂") && D_NAME == ""
		D_NAME '= RESULTS
ENDIF
IF GETPALAMLV(PALAM:ARG:欲情,15) > 3
	;欲情時
	SIF 差分抽出(ARG, TYPE, LOCALS, "欲情", , "欲情") && D_NAME == ""
		D_NAME '= RESULTS
ENDIF

SIF !RAND:2 && 差分抽出(ARG, TYPE, LOCALS, "表情") && D_NAME == ""
	D_NAME '= RESULTS

;差分が見つかればそれを、なければ差分無しを返す
SIF D_NAME != ""
	RETURNF D_NAME
RETURNF LOCALS

