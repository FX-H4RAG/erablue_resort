@顔グラ表示用文字列関数(ARG)
#FUNCTIONS

#DIM 縦幅
#DIM 横幅
#DIM 表示位置調整用

;リソース解放
SPRITEDISPOSE "顔グラ"
GDISPOSE 1000
SIF CSTR:ARG:画像フォルダ == ""
	CSTR:ARG:画像フォルダ = {NO:ARG}%CALLNAME:ARG%

IF CSTR:ARG:顔グラ表示切り替え用文字列 == ""
	GCREATEFROMFILE 1000, @"%CSTR:ARG:画像フォルダ%/顔_デフォルト.png"
ELSE
	GCREATEFROMFILE 1000, @"%CSTR:ARG:画像フォルダ%/%CSTR:ARG:顔グラ表示切り替え用文字列%.png"
ENDIF
IF RESULT == 0
	;該当画像が無い場合
	IF CSTR:ARG:顔グラ表示切り替え用文字列 == ""
		;そもそもデフォルト画像が無い場合はNoimage画像で返す
		RETURNF @"<img src='Noimage_顔' width='180px' height='180px'>"
	ELSEIF GCREATEFROMFILE(1000, @"%CSTR:ARG:画像フォルダ%/%CSTR:ARG:短冊グラ表示切り替え用文字列%.png")
		;設定中の顔グラが存在すればそちらをトリミングで表示
		LOCAL = 画像サイズ切り替えOPTION記憶:1
		画像サイズ切り替えOPTION記憶:1 = 0
		SIF スプライト作成(@"顔グラ", 1000, 1)
			LOCALS '= @"<img src='顔グラ' width='180px' height='180px'>"
		画像サイズ切り替えOPTION記憶:1 = LOCAL
		RETURNF LOCALS
	ELSEIF GCREATEFROMFILE(1000, @"%CSTR:ARG:画像フォルダ%/顔_デフォルト.png")
		;変更後画像も設定中の顔グラも無い場合はデフォルト顔を表示させる
	ELSE
		;どれもない場合はNoimage画像で返す
		RETURNF @"<img src='Noimage_顔' width='180px' height='180px'>"
;		GCREATEFROMFILE 1000, @"{NO:ARG}%CALLNAME:ARG%/顔_デフォルト.png"
	ENDIF
ENDIF
SIF スプライト作成(@"顔グラ", 1000, 0)
	LOCALS = <img src='顔グラ' width='180px' height='180px'>

RETURNF LOCALS
