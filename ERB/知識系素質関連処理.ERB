;ここから知識系素質
FOR LOCAL, 1, 100
	;知識マイナスの場合は通常成長しない
	SIF 知識素質:ARG:LOCAL < 0
		CONTINUE
	LOCAL:1 = POWER(10, 知識素質:ARG:LOCAL) * 100
	IF 知識素質:ARG:(LOCAL + 100) >= LOCAL:1
		知識素質:ARG:LOCAL += 1
		PRINTFORMW %CALLNAME:ARG%は[%ERDNAME(知識素質, LOCAL)%Lv{知識素質:ARG:LOCAL}]を習得した！
		;知識成長口上
		TRYCALLFORM KOJO_SKILLUP_知識素質_{NO:ARG}(ARG, LOCAL)
	ENDIF
