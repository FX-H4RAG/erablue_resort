	対象キャラ２ = FIND_CHARA_FROM_PERSON_ID(DT_CELL_GET("縁結びデータベース", LOCAL, "対象キャラ２"))
	
	;ここで同行確率を上げておく
	FOR LOCAL:1, 0, 5
