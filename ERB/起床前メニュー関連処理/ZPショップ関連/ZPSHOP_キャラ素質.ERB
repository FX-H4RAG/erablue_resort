		IF RESULT == 1
			LOCAL --
			SIF LOCAL < 0
				LOCAL = 表示最大数 - 1
		ELSEIF RESULT == 2
			LOCAL ++
			SIF 表示最大数 <= LOCAL
				LOCAL = 0
		ENDIF
		SIF RESULT == -1
			RESTART
		LOOP 1
ENDSELECT

