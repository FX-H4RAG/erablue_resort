#DIMS 弱点キー
#DIM 加算値

SIF 加算値 == 0
	加算値 = 1

IF DT_SELECT("弱点の欠片データベース", @"弱点キー = '%弱点キー%'")
	DT_CELL_SET "弱点の欠片データベース", RESULT:1, "数量", DT_CELL_GET("弱点の欠片データベース", RESULT:1, "数量", 1) + 加算値, 1
ELSE
	DT_ROW_ADD "弱点の欠片データベース", "弱点キー", 弱点キー, "数量", 加算値
ENDIF



