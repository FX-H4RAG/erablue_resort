@通常広告
#DIM 集客候補, 200
#DIM 候補人数
VARSET 集客候補

;広告プランの表示
DRAWLINE
PRINTL どのくらい広告を出しますか？
DRAWLINE

IF MONEY < 3000
	SETCOLOR 0x666666
	PRINTPLAIN [1]近くの島に広告を出す　（ルピが足りません）
	PRINTL 
	RESETCOLOR
ELSE
	PRINTBUTTONLC "[1]近くの島に広告を出す", 1
	PRINTL （必要ルピ：3000ルピ　　集客予想値：２～３人）
ENDIF
IF MONEY < 5000
	SETCOLOR 0x666666
	PRINTPLAIN [2]広範囲に広告を出す　　（ルピが足りません）
	PRINTL 
	RESETCOLOR
ELSE
	PRINTBUTTONLC "[2]広範囲に広告を出す", 2
	PRINTL （必要ルピ：5000ルピ　　集客予想値：３～５人）
ENDIF
IF MONEY < 10000
	SETCOLOR 0x666666
	PRINTPLAIN [3]空域全体に広告を出す　（ルピが足りません）
	PRINTL 
	RESETCOLOR
ELSE
	PRINTBUTTONLC "[3]空域全体に広告を出す", 3
	PRINTL （必要ルピ：10000ルピ　　集客予想値：５～７人）
ENDIF
PRINTL 
RESETCOLOR
PRINTBUTTON "[999]戻る", 999
PRINTL 
DRAWLINE

$INPUT_LOOP
INPUT

SELECTCASE RESULT
	CASE 1
		IF MONEY < 3000
			PRINTW ルピが足りません
			GOTO INPUT_LOOP
		ENDIF
		PRINTW 近くの島に広告を出しました。
		MONEY -= 3000
		CALL 人気上昇処理(3000)
		集客人数 = RAND:2 + 2
	CASE 2
		IF MONEY < 5000
			PRINTW ルピが足りません
			GOTO INPUT_LOOP
		ENDIF
		PRINTW 遠くの島まで広告を出しました。
		MONEY -= 5000
		CALL 人気上昇処理(5000)
		集客人数 = RAND:3 + 3
	CASE 3
		IF MONEY < 10000
			PRINTW ルピが足りません
			GOTO INPUT_LOOP
		ENDIF
		PRINTW 奮発して空域全体に広告を出しました！
		MONEY -= 10000
		CALL 人気上昇処理(10000)
		集客人数 = RAND:3 + 5
	CASE 999
		RETURN -1
	CASEELSE
		REUSELASTLINE 
		GOTO INPUT_LOOP
ENDSELECT

;上限以下にする
集客人数 = MIN(集客人数, (滞在キャラ上限 - 滞在キャラ数))

LOCAL:1 = 0
FOR LOCAL, 1, CHARANUM
	SIF GETCHARA(LOCAL) == -1
		CONTINUE
	;招待不可キャラは排除
	SIF CFLAG:LOCAL:招待不可フラグ
		CONTINUE
	;サプチケで呼ぶ予定のキャラは排除
	SIF LOCAL == サプチケキャラ招待
		CONTINUE
	;滞在状態ではないキャラをカウント
	IF CFLAG:LOCAL:滞在期間 == -1
		集客候補:(LOCAL:1) = LOCAL
		LOCAL:1 += 1
	ENDIF
NEXT
候補人数 = LOCAL:1

;（たぶんないと思うけど）候補人数が０の場合はそのまま終わる
SIF 候補人数 == 0
	RETURN 0

;候補人数が集客人数より少ない場合は全員登録
IF 候補人数 <= 集客人数
	FOR LOCAL, 0, 候補人数
		通常キャラ招待:LOCAL = 集客候補:LOCAL
	NEXT
ENDIF

LOCAL:2 = 0
LOCAL = 候補人数 - 1
;集客候補配列をシャッフル
WHILE LOCAL > 0
	LOCAL:1 = RAND:(LOCAL - 1)
	SWAP 集客候補:LOCAL, 集客候補:(LOCAL:1)
	LOCAL -= 1
	LOCAL:2 += 1
	;必要分集まったらおしまい
	SIF LOCAL:2 >= 集客人数
		BREAK
WEND
;配列の後ろの方にランダムシャッフルされた候補が集まってるはずなので集客人数分取得
FOR LOCAL, 0, 集客人数
	通常キャラ招待:LOCAL = 集客候補:(候補人数 - 1 - LOCAL)
NEXT

