@人気上昇処理(使用ルピ量)
#DIM 使用ルピ量
#DIM 減衰上限ライン
#DIM 仮加算後値
VARSET LOCAL

LOCAL = 使用ルピ量 / 100
LOCAL:1 += LOCAL * LOCAL * RAND(90, 111) / 100
IF LOCAL < 0
	LOCAL:1 = LOCAL:1 * -1
ENDIF

;減衰処理
仮加算後値 = (リゾート人気度 * 1000) + LOCAL:1
CALL 人気度上限算出()
減衰上限ライン = RESULT

IF 仮加算後値 > 減衰上限ライン
	仮加算後値 = (仮加算後値 - 減衰上限ライン) / 10 + 減衰上限ライン
ENDIF
IF 仮加算後値 >= 減衰上限ライン * 110 / 100
	仮加算後値 = (仮加算後値 - (減衰上限ライン * 110 / 100)) / 100 + (減衰上限ライン * 110 / 100)
ENDIF
IF 仮加算後値 >= 減衰上限ライン * 120 / 100
	仮加算後値 = (仮加算後値 - (減衰上限ライン * 120 / 100)) / 1000 + (減衰上限ライン * 120 / 100)
ENDIF

リゾート人気度小数点以下 += LOCAL:1
IF LOCAL:1 > 0
	LOCAL:1 = MAX(仮加算後値 - (リゾート人気度 * 1000), 10)
	PRINTFORMW リゾートの人気度が{LOCAL:1 / 1000}.{(LOCAL:1 % 1000) / 100}{(LOCAL:1 % 100) / 10}{(LOCAL:1 % 10)}上昇した！
ELSE
	LOCAL:2 = LOCAL:1 * -1
	PRINTFORMW リゾートの人気度が{LOCAL:2 / 1000}.{(LOCAL:2 % 1000) / 100}{(LOCAL:2 % 100) / 10}{(LOCAL:2 % 10)}減少した…
ENDIF
IF リゾート人気度小数点以下 < 0
	リゾート人気度 += リゾート人気度小数点以下 / 1000 - 1
	リゾート人気度小数点以下 = 1000 + (リゾート人気度小数点以下 % 1000)
ELSEIF リゾート人気度小数点以下 / 1000 > 0
	リゾート人気度 += リゾート人気度小数点以下 / 1000
	リゾート人気度小数点以下 = リゾート人気度小数点以下 % 1000
ENDIF

RETURN LOCAL:1

@人気度上限算出
VARSET LOCAL

LOCAL = 滞在キャラ上限 * 2 * 1000

;上限上昇要素
FOR LOCAL:1, 3, 9
	TRYCALLFORM 空挺港店舗効果_{空挺港店舗状況:(LOCAL:1):0}("人気度上昇量の減衰ライン")
	LOCAL += RESULT
NEXT
IF ダンジョンクリアフラグ_人食い鳥の島
	;航路開放による上限上昇、キャラクター２０人分
	LOCAL += 40000
ENDIF

RETURN LOCAL

