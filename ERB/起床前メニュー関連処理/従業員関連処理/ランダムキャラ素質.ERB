@ランダム交際経験(未経験, 年齢)
#FUNCTION
#DIM 未経験
#DIM 年齢
#DIM 恋人持ち

IF !未経験
	;非処女の場合
	SELECTCASE 年齢
		CASE -1, 0
			;若い～成人 想い人あり、恋人持ち、セフレありが各20%ずつ
			IF RAND:5
				恋人持ち = RAND:4 - 2
			ELSE
				恋人持ち = 0
			ENDIF
		CASE 1
			;大人 想い人あり、恋人持ちが各20%ずつ、セフレあり、人妻が各10%ずつ
			IF RAND:5
				恋人持ち = RAND:4 - 2
				SIF 恋人持ち == -2 && RAND:2
					恋人持ち = 2
			ELSE
				恋人持ち = 0
			ENDIF
		CASE 2
			;中年 50%で人妻、25%で未亡人
			IF RAND:2
				恋人持ち = 2
			ELSEIF RAND:2
				恋人持ち = 3
			ELSE
				恋人持ち = 0
			ENDIF
		CASE 3, 4
			;長命者 50%で未亡人、25%でセフレあり
			IF RAND:2
				恋人持ち = 3
			ELSEIF RAND:2
				恋人持ち = -2
			ELSE
				恋人持ち = 0
			ENDIF
		CASEELSE
			;幼い 50%でセフレあり、25%で恋人持ち
			IF RAND:2
				恋人持ち = -2
			ELSEIF RAND:2
				恋人持ち = 1
			ELSE
				恋人持ち = 0
			ENDIF
	ENDSELECT
	;出産経験
	IF 恋人持ち == 2 || 恋人持ち == 3
		;人妻or未亡人に+0～3
		恋人持ち += 10000 * (RAND:2 + RAND:2 + RAND:2)
	ELSEIF 恋人持ち == -2 && RAND:50 == 0
		;セフレありに2%で+1
		恋人持ち -= 10000
	ENDIF
ELSE
	;処女の場合
	SELECTCASE 年齢
		CASE -1
			;若い 10%で想い人あり、2.5%で恋人持ち
			IF RAND:8
				恋人持ち = 0
			ELSEIF RAND:5
				恋人持ち = -1
			ELSE
				恋人持ち = 1
			ENDIF
		CASE 0 TO 2
			;成人～中年 10%で恋人持ち、2.5%で想い人あり
			IF RAND:8
				恋人持ち = 0
			ELSEIF RAND:5
				恋人持ち = 1
			ELSE
				恋人持ち = -1
			ENDIF
		CASEELSE
			;幼いor長命者 5%で想い人あり
			IF RAND:20
				恋人持ち = 0
			ELSE
				恋人持ち = -1
			ENDIF
	ENDSELECT
ENDIF
RETURNF 恋人持ち

