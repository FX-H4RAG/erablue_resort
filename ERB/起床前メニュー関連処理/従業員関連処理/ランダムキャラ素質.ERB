				CASE 4
					;ロリババア
					体格 = -2
				CASE -2
					;幼い
					体格 = RAND:5 - 2
					SIF 体格 == 1 || 体格 == 2
						体格 = -1
				CASEELSE
					;それ以外
					体格 = RAND:5 - 2
					SIF 体格 == -2 || 体格 == 2
						体格 = 0
			ENDSELECT
		ELSE
			;男性
