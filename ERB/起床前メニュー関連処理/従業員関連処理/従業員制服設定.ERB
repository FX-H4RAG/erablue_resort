LOCALS += "<div rect='156,156,1937,2812'>"
IF 対象キャラ != 9999
	LOCALS += @"%CALLNAME:対象キャラ, 16, LEFT%["
	IF 現在制服:対象キャラ:0 == ""
		LOCALS += "普段着]"
