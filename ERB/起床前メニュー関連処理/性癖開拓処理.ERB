				PRINTL 
			NEXT

			DRAWLINE

			;ページめくり表示
			IF 現在ページ > 0
				PRINTBUTTONLC "[900]前ページへ", 900
			ELSE
				PRINTLC 　
			ENDIF
			PRINTFORM - {現在ページ + 1} -
			IF LOCAL:1 == 0
				PRINTBUTTONC "[901]次ページへ", 901
			ENDIF
			PRINTL 
			PRINTBUTTON "[999]戻る", 999
			BINPUT

			;広告対象のINPUT
			SELECTCASE RESULT
				CASE 900
					現在ページ = MAX(現在ページ - 1, 0)
					GOTO 表示_LOOP2
				CASE 901
					SIF LOCAL:1 == 0
						現在ページ += 1
					GOTO 表示_LOOP2
				CASE 999
					GOTO 性癖表示LOOP
				CASE 1000
					VARSET 複数登録配列
					SPLIT 複数登録キャラ, "__", 複数登録配列
					FOR LOCAL, 1, 100
						SIF 複数登録配列:LOCAL == ""
