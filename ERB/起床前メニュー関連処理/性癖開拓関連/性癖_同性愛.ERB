#DIMS 素質名
#DIMS 性愛対象
素質名 '= GET_性癖素質NAME(GETNUM(性癖素質, "同性愛"), キャラ番号)
SIF 素質名 == ""
	RETURN 0

性愛対象 '= SUBSTRINGU(素質名, 0, STRLENSU(素質名) - 1)

SELECTCASE 性癖素質:キャラ番号:同性愛
	CASE 1
		;経験が足りないとダメ
		SIF EXP:キャラ番号:同性愛経験 < 500
			RETURN 0
