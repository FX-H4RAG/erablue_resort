@料理メニューコンボ_バランスの良い食事処(ARGS)
SELECTCASE ARGS
	CASE "コンボ判定"
		LOCALS:0 = %DT_CELL_GETS("所持素材データベース", DT_CELL_GET("料理メニューデータベース", 現在設定メニュー:1, "メイン食材ID", 1), "食材分類", 1)%
		LOCALS:1 = %DT_CELL_GETS("所持素材データベース", DT_CELL_GET("料理メニューデータベース", 現在設定メニュー:2, "メイン食材ID", 1), "食材分類", 1)%
		LOCALS:2 = %DT_CELL_GETS("所持素材データベース", DT_CELL_GET("料理メニューデータベース", 現在設定メニュー:3, "メイン食材ID", 1), "食材分類", 1)%
		LOCALS:3 = %DT_CELL_GETS("所持素材データベース", DT_CELL_GET("料理メニューデータベース", 現在設定メニュー:4, "メイン食材ID", 1), "食材分類", 1)%
		LOCALS:4 = %DT_CELL_GETS("所持素材データベース", DT_CELL_GET("料理メニューデータベース", 現在設定メニュー:5, "メイン食材ID", 1), "食材分類", 1)%
		;メインの食材カテゴリが全種制覇
		SIF MATCH(LOCALS, "魚") < 1
			RETURN 0
		SIF MATCH(LOCALS, "肉") < 1
			RETURN 0
		SIF MATCH(LOCALS, "野菜") < 1
			RETURN 0
		SIF MATCH(LOCALS, "穀物") < 1
			RETURN 0

		発動中コンボ名 = バランスの良い食事処
		詳細文文字列受け渡し変数 = メニュー効果によるルピ取得量を１０％増加させる。
		RETURN 1
		;効果処理は@EVENTEND0で記述
ENDSELECT

