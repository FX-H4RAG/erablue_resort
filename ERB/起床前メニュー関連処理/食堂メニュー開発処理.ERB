;特殊料理条件との照らし合わせ
;使用している食材の数に応じて呼ぶ関数を絞る
関数総数 = ENUMFUNCBEGINSWITH(@"特殊料理_{9 - MATCH(使用食材, 0)}種レシピ_")
料理名受け渡し = 
FOR LOCAL, 0, 関数総数
	CALLFORM %RESULTS:LOCAL%("レシピ参照")
	IF RESULT > 0
		;フラグに使用食材数を入れる
		特殊料理フラグ = 9 - MATCH(使用食材, 0)
		RETURN 1
	ENDIF
NEXT

;ないなら汎用料理を見る
特殊料理フラグ = 0
SELECTCASE 使用食材:9
	CASE 1
		;包丁
		SELECTCASE DT_CELL_GETS("所持素材データベース", 使用食材:0, "食材分類", 1)
			CASE "肉"
				料理名受け渡し = ローストビーフ
			CASE "魚"
				料理名受け渡し = 刺し身
			CASE "野菜"
				料理名受け渡し = サラダ
			CASE "穀物"
				料理名受け渡し = サンドイッチ
		ENDSELECT
	CASE 2
		;オーブン
		SELECTCASE DT_CELL_GETS("所持素材データベース", 使用食材:0, "食材分類", 1)
			CASE "肉"
				料理名受け渡し = ミートパイ
			CASE "魚"
				料理名受け渡し = 焼き魚
			CASE "野菜"
				料理名受け渡し = 野菜のオーブン焼き
			CASE "穀物"
				料理名受け渡し = グラタン
			CASE "卵"
				料理名受け渡し = エッグタルト
		ENDSELECT
	CASE 3
		;鍋
		SELECTCASE DT_CELL_GETS("所持素材データベース", 使用食材:0, "食材分類", 1)
			CASE "肉"
				料理名受け渡し = 煮込みハンバーグ
			CASE "魚"
				料理名受け渡し = 魚の煮付け
			CASE "野菜"
				料理名受け渡し = 野菜スープ
			CASE "穀物"
				料理名受け渡し = ラーメン
			CASE "卵"
				料理名受け渡し = ポーチドエッグ
		ENDSELECT
	CASE 4
		;フライパン
		SELECTCASE DT_CELL_GETS("所持素材データベース", 使用食材:0, "食材分類", 1)
			CASE "肉"
				料理名受け渡し = ステーキ
			CASE "魚"
				料理名受け渡し = アクアパッツァ
			CASE "野菜"
				料理名受け渡し = 野菜炒め
			CASE "穀物"
				料理名受け渡し = 焼きそば
			CASE "卵"
				料理名受け渡し = 目玉焼き
		ENDSELECT
ENDSELECT

IF 料理名受け渡し == ""
	特殊料理フラグ = 1
	料理名受け渡し = 失敗料理
ENDIF
