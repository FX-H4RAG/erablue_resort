				ルピ収入 += MAX(DT_CELL_GET("所持素材データベース", 使用食材:2, "素材ランク", 1) / 3, 1)
			SIF 使用食材:3
				ルピ収入 += MAX(DT_CELL_GET("所持素材データベース", 使用食材:3, "素材ランク", 1) / 3, 1)
