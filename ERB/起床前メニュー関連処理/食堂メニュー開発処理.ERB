		SIF STRCOUNT(開発済み料理名フラグ文字列, @"_%料理名受け渡し%_") == 0
			開発済み料理名フラグ文字列 += @"%料理名受け渡し%_"
		HTML_PRINT LOCALS
		PRINTL
		WAIT
		VARSET 使用食材
		RETURN 1
ENDSELECT


